@{
    ViewBag.Title = "Academic Calendar";
}

<link rel="stylesheet" href="~/Content/calendar.css" />

<div class="admin-container">

    <div class="page-header">
        <h1>Academic Calendar</h1>
        <p class="subtitle">Manage events, assignments, and important dates for students and teachers</p>
    </div>

    <div class="calendar-container">
        <!-- Calendar Header -->
        <div class="calendar-header">
            <div class="legend-items">
                <div class="legend-item">
                    <span class="legend-color academic"></span>
                    <span>Academic Events</span>
                </div>
                <div class="legend-item">
                    <span class="legend-color holidays"></span>
                    <span>Holidays</span>
                </div>
                <div class="legend-item">
                    <span class="legend-color examinations"></span>
                    <span>Examinations</span>
                </div>
                <div class="legend-item">
                    <span class="legend-color school-events"></span>
                    <span>School Events</span>
                </div>
            </div>

            <div class="calendar-navigation">
                <button class="nav-btn" id="prevMonth">
                    <i class="fa-solid fa-caret-left"></i>
                </button>
                <span id="currentMonth">October 2024</span>
                <button class="nav-btn" id="nextMonth">
                    <i class="fa-solid fa-caret-right"></i>
                </button>
            </div>
        </div>

        <!-- Calendar Grid -->
        <div class="calendar-content">
            <div class="calendar-grid">
                <!-- Days of Week Header -->
                <div class="days-header">
                    <div class="day-header">SUN</div>
                    <div class="day-header">MON</div>
                    <div class="day-header">TUE</div>
                    <div class="day-header">WED</div>
                    <div class="day-header">THU</div>
                    <div class="day-header">FRI</div>
                    <div class="day-header">SAT</div>
                </div>

                <!-- Calendar Days -->
                <div class="days-grid" id="calendarDays">
                    <!-- Days will be dynamically generated here -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- THIS IS SAMPLE COMMENT -->

<!-- Add/Edit Event Modal -->
<div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eventModalLabel">
                    <i class="fa-solid fa-calendar-plus"></i> <span id="modalTitle">Add Event</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="eventForm">
                    @Html.AntiForgeryToken()
                    <!-- Hidden field for event ID when editing -->
                    <input type="hidden" id="eventId" name="eventId" />

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label for="eventTitle" class="form-label">Event Title *</label>
                            <input type="text" id="eventTitle" name="eventTitle" class="form-control"
                                   aria-describedby="eventTitleHelp" required>
                            <div id="eventTitleHelp" class="form-text">Enter a unique title for the event.</div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="eventType" class="form-label">Event Type *</label>
                            <select id="eventType" name="eventType" class="form-select" required>
                                <option value="">Choose Type</option>
                                <option value="academic">Academic Events</option>
                                <option value="holidays">Holidays</option>
                                <option value="examinations">Examinations</option>
                                <option value="school-events">School Events</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="startDate" class="form-label">From Date *</label>
                            <input type="date" id="startDate" name="startDate" class="form-control"
                                   aria-describedby="startDateHelp" required>
                            <div id="startDateHelp" class="form-text">Select the start date of the event.</div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="endDate" class="form-label">To Date *</label>
                            <input type="date" id="endDate" name="endDate" class="form-control"
                                   aria-describedby="endDateHelp" required>
                            <div id="endDateHelp" class="form-text">Select the end date of the event.</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="eventDescription" class="form-label">Description</label>
                        <textarea id="eventDescription" name="eventDescription" class="form-control" rows="3"
                                  placeholder="Enter event description..."></textarea>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn delete-btn d-none" id="deleteEventBtn">
                    <i class="fa-solid fa-trash"></i> Delete Event
                </button>
                <button type="submit" class="btn" id="saveEventBtn" form="eventForm">
                    <i class="fa-solid fa-save"></i> <span id="saveButtonText">Save Event</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- View Event Details Modal -->
<div class="modal fade" id="eventDetailsModal" tabindex="-1" aria-labelledby="eventDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eventDetailsModalLabel">
                    <i class="fa-solid fa-circle-info"></i> Event Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <h4 id="detailTitle"></h4>
                <span id="detailType" class="event-badge mb-3 d-inline-block"></span>
                <p><strong>Date:</strong> <span id="detailDate"></span></p>
                <p><strong>Description:</strong></p>
                <p id="detailDescription" class="mb-0"></p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Close</button>
                <button type="button" id="editEventBtn" class="btn">
                    <i class="fa-solid fa-pen"></i> Edit
                </button>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script src="~/Scripts/Custom/schoolCalendar.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            calendar = new SchoolCalendar('admin');
        });
    </script>
}

