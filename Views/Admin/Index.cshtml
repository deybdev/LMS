@model LMS.Models.AdminDashboardViewModel

@{
    ViewBag.Title = "Admin Dashboard";
}

<link rel="stylesheet" href="~/Content/adminDashboard.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">



<div class="admin-dashboard">
    <button type="button" class="btn btn-danger px-4 mb-3" data-bs-toggle="modal" data-bs-target="#logoutModal">
        <i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout
    </button>

    <div class="dashboard-header d-flex justify-content-between align-items-center">
        <div>
            @if (Session["FirstName"] != null)
            {
                <h1>
                    Welcome back, @Session["LastName"]
                </h1>
            }


            <p>Here what's happening with your classes today</p>
        </div>
        <div class="date-time">
            <div id="currentTime" class="current-time"></div>
            <div id="currentDate" class="current-date"></div>
        </div>
    </div>

    <!-- Stats -->
    <div class="stats-grid">
        <div class="stat-card students">
            <div class="stat-icon"><i class="fas fa-user-graduate"></i></div>
            <div class="stat-content">
                <p class="stat-number" data-target="@Model.TotalStudents">@Model.TotalStudents</p>
                <p class="stat-label">Students</p>
            </div>
        </div>

        <div class="stat-card teachers">
            <div class="stat-icon"><i class="fas fa-chalkboard-teacher"></i></div>
            <div class="stat-content">
                <p class="stat-number" data-target="@Model.TotalTeachers">@Model.TotalTeachers</p>
                <p class="stat-label">Teachers</p>
            </div>
        </div>

        <div class="stat-card courses">
            <div class="stat-icon"><i class="fas fa-book-open"></i></div>
            <div class="stat-content">
                <p class="stat-number" data-target="@Model.TotalCourses">@Model.TotalCourses</p>
                <p class="stat-label">Courses</p>
            </div>
        </div>
    </div>


    <div class="dashboard-grid">
        <!-- Recent Activities -->
        <div class="dashboard-card">
            <div class="card-header"><h3><i class="fas fa-clipboard-list"></i> Recent Activities</h3></div>
            <div class="card-content">
                <div class="activity-list">
                    @foreach (var log in Model.AuditLogs)
                    {
                        string iconClass = "";
                        string badgeClass = "";

                        switch (log.Category)
                        {
                            case "Authentication":
                                iconClass = "fas fa-user-lock";
                                badgeClass = "auth";
                                break;
                            case "System":
                                iconClass = "fas fa-cogs";
                                badgeClass = "system";
                                break;
                            case "User Actions":
                                iconClass = "fas fa-users";
                                badgeClass = "user";
                                break;
                            case "Course Management":
                                iconClass = "fas fa-chalkboard-teacher";
                                badgeClass = "course";
                                break;
                            case "Database":
                                iconClass = "fas fa-database";
                                badgeClass = "db";
                                break;
                            default:
                                iconClass = "fas fa-info-circle";
                                badgeClass = "info";
                                break;
                        }

                        <div class="activity-item">
                            <div class="activity-icon"><i class="@iconClass"></i></div>
                            <div class="activity-details">
                                <p class="activity-text">@Html.Raw(log.Message)</p>
                                <p class="activity-time">@log.Timestamp.ToString("MMM dd, yyyy hh:mm tt")</p>
                            </div>
                            <div class="activity-type">
                                <span class="type-badge @badgeClass">@log.Category</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Upcoming Events -->
        <div class="dashboard-card upcoming-events">
            <div class="card-header"><h3><i class="fas fa-calendar-alt"></i> Upcoming Events</h3></div>
            <div class="card-content">
                <div class="events-container">
                    @if (Model.UpcomingEvents.Any())
                    {
                        foreach (var e in Model.UpcomingEvents)
                        {
                            <div class="event-item">
                                <div class="event-date-section">
                                    <div class="event-day">@e.StartDate.ToString("dd")</div>
                                    <div class="event-month">@e.StartDate.ToString("MMM")</div>
                                    <div class="event-year">@e.StartDate.ToString("yyyy")</div>
                                </div>
                                <div class="event-details">
                                    <div class="event-title">@e.Title</div>
                                    <div class="event-description">
                                        @(!string.IsNullOrEmpty(e.Description) ? e.Description : "No description provided")
                                    </div>
                                    <div class="event-meta">
                                        <span class="event-type @e.Type.ToLower()">
                                            @(
                                                    string.IsNullOrEmpty(e.Type)
                                                        ? ""
                                                        : System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(e.Type.Replace("-", " "))
                                                )
                                        </span>
                                    </div>

                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="no-events">No upcoming events available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Admin Dashboard JavaScript
        $(document).ready(function () {
            initializeDashboard();
        });

        function initializeDashboard() {
            updateDateTime();

            // Delay a bit before starting counters
            setTimeout(function () {
                animateCounters();
            }, 100);

            // Update time every second
            setInterval(updateDateTime, 1000);
        }

        // Update current date and time
        function updateDateTime() {
            const now = new Date();
            const dateOptions = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const timeOptions = { hour: '2-digit', minute: '2-digit', second: '2-digit' };

            $('#currentDate').text(now.toLocaleDateString('en-US', dateOptions));
            $('#currentTime').text(now.toLocaleTimeString('en-US', timeOptions));
        }

        // ✅ Simple counter animation
        function animateCounters() {
            $('.stat-number').each(function () {
                const $this = $(this);
                const target = parseInt($this.data('target')) || 0;
                const duration = 2000; // 2 seconds
                const stepTime = 20; // update every 20ms
                const steps = duration / stepTime;
                let count = 0;

                const increment = target / steps;

                const counter = setInterval(() => {
                    count += increment;
                    if (count >= target) {
                        $this.text(target);
                        clearInterval(counter);
                    } else {
                        $this.text(Math.floor(count));
                    }
                }, stepTime);
            });
        }

    </script>

}
