@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - G2 Academy University</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: url('/images/login-background.png') center/cover no-repeat;
            background-size: cover;
            font-family: 'Inter', sans-serif;
            overflow: hidden;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .login-card {
            background: rgba(255, 255, 255, 1);
            border-radius: 24px;
            padding: 50px 60px;
            width: 90%;
            max-width: 588px;
            height: auto;
            min-height: 635px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: none;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .logo {
            width: 64px;
            height: 64px;
            margin: 0 auto 24px;
            display: block;
        }

        .title {
            font-family: 'Archivo Black', sans-serif;
            font-size: 2.25rem;
            color: #1e293b;
            text-align: center;
            margin-bottom: 12px;
            font-weight: 900;
            letter-spacing: -0.025em;
        }

        .subtitle {
            font-family: 'Archivo', sans-serif;
            color: #6b7280;
            text-align: center;
            margin-bottom: 40px;
            font-size: 1rem;
            line-height: 1.5;
        }

        .form-label {
            font-family: 'Archivo', sans-serif;
            font-weight: 600;
            color: #374151;
            margin-bottom: 10px;
            font-size: 1rem;
        }

        .form-control {
            font-family: 'Archivo', sans-serif;
            border: 1px solid #d1d5db;
            border-radius: 10px;
            padding: 16px 18px;
            font-size: 1rem;
            transition: all 0.2s ease;
            background: #ffffff;
            height: 50px;
        }

        .form-control:focus {
            border-color: #1e40af;
            box-shadow: 0 0 0 3px rgba(30, 64, 175, 0.1);
            outline: none;
            background: #ffffff;
        }

        .btn-login {
            font-family: 'Archivo', sans-serif;
            background: #1e40af;
            border: none;
            border-radius: 50px;
            padding: 16px;
            font-weight: 600;
            font-size: 1rem;
            color: white;
            width: 100%;
            height: 50px;
            transition: all 0.2s ease;
            letter-spacing: 0.3px;
        }

        .btn-login:hover {
            background: #1e3a8a;
        }

        .btn-register {
            font-family: 'Archivo', sans-serif;
            background: #f3f4f6;
            border: none;
            border-radius: 50px;
            padding: 16px;
            font-weight: 500;
            font-size: 1rem;
            color: #6b7280;
            width: 100%;
            height: 50px;
            transition: all 0.2s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            letter-spacing: 0.2px;
            line-height: 18px;
        }

        .btn-register:hover {
            background: #e5e7eb;
            color: #4b5563;
            text-decoration: none;
        }

        .home-link {
            position: absolute;
            top: 30px;
            left: 30px;
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            color: #1e40af;
            text-decoration: none;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 20px;
            border-radius: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .home-link:hover {
            background: rgba(255, 255, 255, 1);
            color: #1e3a8a;
            text-decoration: none;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
        }

        .error-message {
            background: #fee2e2;
            color: #dc2626;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: center;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <a href="/" class="home-link">
        <i class="fas fa-arrow-left"></i>
        Back to Home
    </a>

    <div class="login-container">
        <div class="login-card">
            <img src="~/images/logo.png" alt="G2 Academy University" class="logo" />
            <h1 class="title">School LMS</h1>
            <p class="subtitle">Enter your credentials to access the learning<br>management system</p>
            
            @if (ViewBag.Error != null)
            {
                <div class="error-message">@ViewBag.Error</div>
            }

            <form method="post" action="/Account/Login" novalidate>
                <div class="mb-3">
                    <label for="email" class="form-label">Username</label>
                    <input type="text" class="form-control" id="email" name="email" autocomplete="off">
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" autocomplete="off">
                </div>
                <div class="d-grid gap-4">
                    <button type="submit" class="btn-login">Login</button>
                    <a href="/Identity/Account/Register" class="btn-register">Register</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>