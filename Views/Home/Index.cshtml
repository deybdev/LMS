@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/Content/Custom/index.css" asp-append-version="true" />


<div class="welcome-section text-center">
    <div class="main-text container-fluid">
        <h1>
            Excellence in Innovation
            and Learning
        </h1>
        <p class="main-paragraph">
            G2 Academy University provides world-class education that empowers students with innovation, technical expertise, and strong values — preparing future leaders to excel in a rapidly evolving digital world.
        </p>
    </div>

    <!-- NEWS SECTION -->
    <div class="news-section container-fluid p-5">
        <h2 class="section-title news-header mb-5">News & Announcements</h2>
        <div class="row g-4 ">
            <div class="col-md-4">
                <div class="news-card">
                    <div class="news-card-image">
                        <img src="~/images/news1.jpg" alt="School Admission">
                        <div class="news-date">
                            <span class="date">15</span>
                            <span class="month">JAN</span>
                        </div>
                    </div>
                    <div class="news-card-content">
                        <h5 class="news-title">School Admission Open</h5>
                        <p class="news-text">
                            Registration for Spring 2026 semester
                            is now open. Enroll through the student
                            portal until October 15th.
                        </p>

                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="news-card">
                    <div class="news-card-image">
                        <img src="~/images/news2.jpg" alt="Job Fair">
                        <div class="news-date">
                            <span class="date">20</span>
                            <span class="month">JAN</span>
                        </div>
                    </div>
                    <div class="news-card-content">
                        <h5 class="news-title">Job Fair & Career Expo</h5>
                        <p class="news-text">
                            Join us on October 20th. Over 100
                            companies recruiting for internships
                            and positions.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="news-card">
                    <div class="news-card-image">
                        <img src="~/images/news3.jpg" alt="Research Grant">
                        <div class="news-date">
                            <span class="date">25</span>
                            <span class="month">JAN</span>
                        </div>
                    </div>
                    <div class="news-card-content">
                        <h5 class="news-title">Research Grant Awardees</h5>
                        <p class="news-text">
                            Science Department received $2M
                            grant for renewable energy research.
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="about-insti container-fluid p-5 ">
        <div class="row align-items-center">
            <!-- Left column: Description + Core Values -->
            <div class="col-md-6">
                <!-- School Description -->
                <div class="school-desc mb-4">
                    <h3 class="subtitle">School Description</h3>
                    <p class="about-text">
                        Our university is a leading institution dedicated to academic excellence and innovation. With state-of-the-art facilities and world-class faculty, we provide students with comprehensive education and opportunities for personal growth.
                    </p>
                </div>

                <!-- Core Values -->
                <div class="about-core">
                    <h3 class="subtitle">Core Values</h3>
                    <ul>
                        <li>Excellence: Pursuing the highest standards</li>
                        <li>Integrity: Maintaining moral principles</li>
                        <li>Innovation: Embracing new ideas</li>
                    </ul>
                </div>
            </div>

            <!-- Right column: Image -->
            <div class="col-md-6">
                <img src="https://media.istockphoto.com/id/171306436/photo/red-brick-high-school-building-exterior.jpg?s=612x612&w=0&k=20&c=vksDyCVrfCpvb9uk4-wcBYu6jbTZ3nCOkGHPSgNy-L0=" alt="University Image" class="img-fluid rounded">
            </div>
        </div>
    </div>



    <div class="p-5">
        <h2 class="section-title text-center mb-5">Our Vision and Mission</h2>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="p-4 bg-light shadow rounded h-100">
                    <h3 class="subtitle text-center">Vision</h3>
                    <p class="about-text text-center">
                        To be a globally recognized institution that transforms lives through education, fosters innovative thinking and research, and cultivates environments for a better future.
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-4 bg-light shadow rounded h-100">
                    <h3 class="subtitle text-center">Mission</h3>
                    <p class="about-text text-center">
                        To provide accessible, inclusive, and excellence-driven education through innovative pedagogy while adhering to become impactful global citizens.
                    </p>
                </div>
            </div>
        </div>
    </div>



</div>

