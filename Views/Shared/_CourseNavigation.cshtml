@model LMS.Models.Course

@{
    int courseId = ViewBag.CourseId ?? Model.Id;
    string activeTab = ViewBag.ActiveTab as string ?? "";
    string userRole = Session["Role"] as string ?? "";
}

<!-- Navigation Tabs -->
<div class="course-navigation">
    <div class="nav-tabs">
        <!-- Common tabs for both Teacher and Student -->
        <button class="nav-tab @(activeTab == "Material" ? "active" : "")"
                onclick="window.location.href='@Url.Action("Material", userRole, new { id = courseId })'">
            Learning Materials
        </button>

        <button class="nav-tab @(activeTab == "Announcement" ? "active" : "")"
                onclick="window.location.href='@Url.Action("Announcement", userRole, new { id = courseId })'">
            Announcement
        </button>

        <button class="nav-tab @(activeTab == "Classwork" ? "active" : "")"
                onclick="window.location.href='@Url.Action("Classwork", userRole, new { id = courseId })'">
            Classwork
        </button>

        @if (userRole == "Teacher")
        {
            <!-- Teacher-only tabs -->
            <button class="nav-tab @(activeTab == "Gradebook" ? "active" : "")"
                    onclick="window.location.href='@Url.Action("Gradebook", "Teacher", new { id = courseId })'">
                Gradebook
            </button>

            <button class="nav-tab @(activeTab == "ClassList" ? "active" : "")"
                    onclick="window.location.href='@Url.Action("ClassList", "Teacher", new { id = courseId })'">
                Class List
            </button>
        }
    </div>
</div>
