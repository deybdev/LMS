<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<!-- This is a comment -->
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <!-- Logo + Brand -->
                <a href="@Url.Action("Index", "Home")" class="d-flex align-items-center text-decoration-none">
                    <img src="~/images/logo.png" alt="G2 Academy Logo" class="navbar-logo me-2" style="height: 50px;" />
                    <div class="navbar-brand">
                        <div class="school-name">G2 Academy University</div>
                        <span>Learning Management System</span>
                    </div>
                </a>
                <div class="nav-actions d-flex ms-auto">

                    <!-- Mobile toggle button -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Navbar links -->
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <div class="navbar-nav gap-4">
                            @{
                                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

                                Func<string, string[], string> isActive = (controller, actions) =>
                                {
                                    if (currentController != controller) return "";
                                    if (actions == null || actions.Length == 0) return "active";
                                    return actions.Contains(currentAction) ? "active" : "";
                                };
                            }

                            @if (Session["Role"] == null)
                            {
                                <!-- Guest -->
                                <a href="@Url.Action("Login", "Home")" class="login-btn py-2 px-5">Login</a>

                            }
                            else if (Session["Role"].ToString() == "Admin")
                            {
                                {
                                    <a href="@Url.Action("Index", "Admin")" class="nav-link @(isActive("Admin", new string[] { "Index" }))">Home</a>
                                    <a href="@Url.Action("ManageUsers", "Admin")" class="nav-link @(isActive("Admin", new string[] { "ManageUsers"}))">User's Account</a>
                                    <a href="@Url.Action("Calendar", "Admin")" class="nav-link @(isActive("Admin", new string[] { "Calendar" }))">Calendar</a>
                                    <a href="@Url.Action("Course", "Admin")" class="nav-link @(isActive("Admin", new string[] { "Course"}))">Courses</a>
                                    <a href="@Url.Action("Logs", "Admin")" class="nav-link @(isActive("Admin", new string[] { "Logs" }))">Logs</a>
                                }

                            }
                            else if (Session["Role"].ToString() == "Teacher")
                            {
                                <a href="@Url.Action("Index", "Teacher")" class="nav-link @(isActive("Teacher", new string[] { "Index" }))">Home</a>
                                <a href="@Url.Action("Course", "Teacher")" class="nav-link @(isActive("Teacher", new string[] { "Course", "CreateCourse", "ViewCourse" }))">Course</a>
                                <a href="@Url.Action("Notification", "Teacher")" class="nav-link @(isActive("Teacher", new string[] { "Notification" }))">Notification</a>
                                <a href="@Url.Action("Profile", "Teacher")" class="nav-link @(isActive("Teacher", new string[] { "Profile" }))">Profile</a>

                            }
                            else if (Session["Role"].ToString() == "Student")
                            {
                                <a href="@Url.Action("Index", "Student")" class="nav-link @(isActive("Student", new string[] { "Index" }))">Home</a>
                                <a href="@Url.Action("Course", "Student")" class="nav-link @(isActive("Student", new string[] { "Course"}))">Course</a>
                                <a href="@Url.Action("TodoList", "Student")" class="nav-link @(isActive("Student", new string[] { "TodoList" }))">To-Do List</a>
                                <a href="@Url.Action("Notification", "Student")" class="nav-link @(isActive("Student", new string[] { "Notification" }))">Notification</a>
                                <a href="@Url.Action("Profile", "Student")" class="nav-link @(isActive("Student", new string[] { "Profile" }))">Profile</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Delete Confirmation Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 rounded-3 shadow-sm">
                    <div class="modal-header p-3">
                        <h6 class="modal-title" id="deleteModalLabel">
                            <i class="fa-solid fa-triangle-exclamation me-2"></i> Confirm Deletion
                        </h6>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body text-center p-4">
                        <p class="mb-1">Are you sure you want to delete</p>
                        <strong id="deleteItemName" class="text-danger"></strong>?
                    </div>

                    <div class="modal-footer d-flex justify-content-end">
                        <form id="deleteForm" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" id="deleteItemId" />
                            <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn delete-btn">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

