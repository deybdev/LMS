<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/Content/Custom/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a href="@Url.Action("Index", "Home")" class="d-flex align-items-center text-decoration-none">
                    <img src="~/images/logo.png" alt="G2 Academy Logo" class="navbar-logo me-2" style="height: 50px;" />
                    <div class="navbar-brand">
                        <div class="school-name">G2 Academy University</div>
                        <span>Learning Management System</span>
                    </div>
                </a>

                <div class="nav-actions d-flex ms-auto">

                    @if (Session["Role"] == null)
                    {
                        <!-- Guest -->
                        <a href="@Url.Action("Login", "Home")" class="login-btn">Login</a>
                    }
                    else if (Session["Role"].ToString() == "Admin")
                    {
                        <!-- Admin Navbar -->
                        <a href="@Url.Action("Index", "Admin")" class="nav-link">Home</a>
                        <a href="@Url.Action("ManageUsers", "Admin")" class="nav-link">User's Account</a>
                        <a href="@Url.Action("Logout", "Home")" class="nav-link text-danger">Reports</a>
                        <a href="@Url.Action("Logout", "Home")" class="nav-link text-danger">System Management</a>
                    }
                    else if (Session["Role"].ToString() == "Teacher")
                    {
                        <!-- Teacher Navbar -->
                        <a href="@Url.Action("Index", "Teacher")" class="nav-link">My Classes</a>
                        <a href="@Url.Action("Profile", "Teacher")" class="nav-link">Profile</a>
                        <a href="@Url.Action("Logout", "Home")" class="nav-link text-danger">Logout</a>
                    }
                    else if (Session["Role"].ToString() == "Student")
                    {
                        <!-- Student Navbar -->
                        <a href="@Url.Action("Index", "Student")" class="nav-link">My Courses</a>
                        <a href="@Url.Action("Profile", "Student")" class="nav-link">Profile</a>
                        <a href="@Url.Action("Logout", "Home")" class="nav-link text-danger">Logout</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div>
        @RenderBody()

    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
