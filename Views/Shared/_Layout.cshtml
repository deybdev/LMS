<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <!-- Logo + Brand -->
                <a href="@Url.Action("Index", "Home")" class="d-flex align-items-center text-decoration-none">
                    <img src="~/images/logo.png" alt="G2 Academy Logo" class="navbar-logo me-2" style="height: 50px;" />
                    <div class="navbar-brand">
                        <div class="school-name">G2 Academy University</div>
                        <span>Learning Management System</span>
                    </div>
                </a>
                <div class="nav-actions d-flex ms-auto">

                    <!-- Mobile toggle button -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Navbar links -->
                    <div class="collapse navbar-collapse" id="navbarResponsive">
                        <div class="navbar-nav gap-4">
                            @{
                                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

                                Func<string, string, string> isActive = (controller, action) =>
                                {
                                    return (currentController == controller && currentAction == action) ? "active" : "";
                                };
                            }

                            @if (Session["Role"] == null)
                            {
                                <!-- Guest -->
                                <a href="@Url.Action("Login", "Home")" class="login-btn py-2 px-5">Login</a>

                            }
                            else if (Session["Role"].ToString() == "Admin")
                            {
                                <a href="@Url.Action("Index", "Admin")" class="nav-link @(isActive("Admin", "Index"))">Home</a>
                                <a href="@Url.Action("ManageUsers", "Admin")" class="nav-link @(isActive("Admin", "ManageUsers"))">User's Account</a>
                                <a href="@Url.Action("Calendar", "Admin")" class="nav-link @(isActive("Admin", "Calendar"))">Calendar</a>
                                <a href="@Url.Action("Course", "Admin")" class="nav-link @(isActive("Admin", "Course"))">Courses</a>
                            }
                            else if (Session["Role"].ToString() == "Teacher")
                            {
                                <a href="@Url.Action("Index", "Teacher")" class="nav-link @(isActive("Teacher", "Index"))">Home</a>
                                <a href="@Url.Action("Course", "Teacher")" class="nav-link @(isActive("Teacher", "Course"))">Course</a>
                                <a href="@Url.Action("Notification", "Teacher")" class="nav-link  @(isActive("Teacher", "Notification"))">Notification</a>
                                <a href="@Url.Action("Profile", "Teacher")" class="nav-link @(isActive("Teacher", "Profile"))">Profile</a>
                            }
                            else if (Session["Role"].ToString() == "Student")
                            {
                                <a href="@Url.Action("Index", "Student")" class="nav-link @(isActive("Student", "Index"))">Home</a>
                                <a href="@Url.Action("Course", "Student")" class="nav-link @(isActive("Student", "Course"))">Course</a>
                                <a href="@Url.Action("TodoList", "Student")" class="nav-link @(isActive("Student", "TodoList"))">To-Do List</a>
                                <a href="@Url.Action("Notification", "Student")" class="nav-link @(isActive("Student", "Notification"))">Notification</a>
                                <a href="@Url.Action("Profile", "Student")" class="nav-link @(isActive("Student", "Profile"))">Profile</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

