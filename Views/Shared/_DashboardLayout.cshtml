<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - G2 Academy University</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Archivo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="font-family: 'Archivo', sans-serif;">
    <!-- Dashboard Header -->
    <header class="bg-white app-navbar">
        <div class="container-fluid px-4">
            <div class="row align-items-center py-3">
                <!-- Left Side - Logo and Title -->
                <div class="col-6 d-flex align-items-center">
                    <div class="d-flex align-items-center">
                        <img src="~/images/logo.png" alt="G2 Academy" style="width: 40px; height: 40px; margin-right: var(--space-md);" />
                        <div>
                            <h5 class="text-heading-md mb-0" style="font-size: var(--text-lg);">G2 Academy University</h5>
                            <small class="text-caption">Learning Management System</small>
                        </div>
                    </div>
                </div>
                
                <!-- Mobile Menu Toggle -->
                <div class="col-6 d-flex justify-content-end d-lg-none">
                    <button class="btn-custom btn-sm btn-secondary-custom d-lg-none" id="mobile-nav-toggle" aria-label="Toggle navigation">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>
                
                <!-- Desktop Navigation Menu -->
                <div class="col-6 d-flex justify-content-end d-none d-lg-flex">
                    <nav role="navigation">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link px-4 @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")" 
                                   href="@Url.Action("Dashboard", "Student")" 
                                   style="@(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "border-bottom: 2px solid #007bff; background: none; color: #007bff; font-weight: 600;" : "color: #6c757d; font-weight: 500;")">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-4 @(ViewContext.RouteData.Values["Action"].ToString() == "Courses" || ViewContext.RouteData.Values["Action"].ToString() == "OngoingCourses" || ViewContext.RouteData.Values["Action"].ToString() == "ViewCourse" || ViewContext.RouteData.Values["Action"].ToString() == "ViewLearningMaterial" || ViewContext.RouteData.Values["Action"].ToString() == "ViewPDFMaterial" || ViewContext.RouteData.Values["Action"].ToString() == "StartLearningMaterial" || ViewContext.RouteData.Values["Action"].ToString() == "ViewCourseClasswork" || ViewContext.RouteData.Values["Action"].ToString() == "ViewCourseAnnouncements" || ViewContext.RouteData.Values["Action"].ToString() == "PostAnnouncement" || ViewContext.RouteData.Values["Action"].ToString() == "ViewAnnouncementDetails" ? "active" : "")" 
                                   href="@Url.Action("Courses", "Student")" 
                                   style="@(ViewContext.RouteData.Values["Action"].ToString() == "Courses" || ViewContext.RouteData.Values["Action"].ToString() == "OngoingCourses" || ViewContext.RouteData.Values["Action"].ToString() == "ViewCourse" || ViewContext.RouteData.Values["Action"].ToString() == "ViewLearningMaterial" || ViewContext.RouteData.Values["Action"].ToString() == "ViewPDFMaterial" || ViewContext.RouteData.Values["Action"].ToString() == "StartLearningMaterial" || ViewContext.RouteData.Values["Action"].ToString() == "ViewCourseClasswork" || ViewContext.RouteData.Values["Action"].ToString() == "ViewCourseAnnouncements" || ViewContext.RouteData.Values["Action"].ToString() == "PostAnnouncement" || ViewContext.RouteData.Values["Action"].ToString() == "ViewAnnouncementDetails" ? "border-bottom: 2px solid #007bff; background: none; color: #007bff; font-weight: 600;" : "color: #6c757d; font-weight: 500;")">Course</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-4 @(ViewContext.RouteData.Values["Action"].ToString() == "TodoList" || ViewContext.RouteData.Values["Action"].ToString() == "StartAssignment" || ViewContext.RouteData.Values["Action"].ToString() == "StartProject" || ViewContext.RouteData.Values["Action"].ToString() == "OverdueMissing" || ViewContext.RouteData.Values["Action"].ToString() == "ViewOverdueDetails" || ViewContext.RouteData.Values["Action"].ToString() == "Finished" || ViewContext.RouteData.Values["Action"].ToString() == "ViewFinishedDetails" ? "active" : "")" 
                                   href="@Url.Action("TodoList", "Student")" 
                                   style="@(ViewContext.RouteData.Values["Action"].ToString() == "TodoList" || ViewContext.RouteData.Values["Action"].ToString() == "StartAssignment" || ViewContext.RouteData.Values["Action"].ToString() == "StartProject" || ViewContext.RouteData.Values["Action"].ToString() == "OverdueMissing" || ViewContext.RouteData.Values["Action"].ToString() == "ViewOverdueDetails" || ViewContext.RouteData.Values["Action"].ToString() == "Finished" || ViewContext.RouteData.Values["Action"].ToString() == "ViewFinishedDetails" ? "border-bottom: 2px solid #007bff; background: none; color: #007bff; font-weight: 600;" : "color: #6c757d; font-weight: 500;")">To-Do List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-4 @(ViewContext.RouteData.Values["Action"].ToString() == "Notifications" ? "active" : "")" 
                                   href="@Url.Action("Notifications", "Student")" 
                                   style="@(ViewContext.RouteData.Values["Action"].ToString() == "Notifications" ? "border-bottom: 2px solid #007bff; background: none; color: #007bff; font-weight: 600;" : "color: #6c757d; font-weight: 500;")">Notifications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-4 @(ViewContext.RouteData.Values["Action"].ToString() == "Profile" || ViewContext.RouteData.Values["Action"].ToString() == "EditProfile" || ViewContext.RouteData.Values["Action"].ToString() == "Grades" || ViewContext.RouteData.Values["Action"].ToString() == "Attendance" || ViewContext.RouteData.Values["Action"].ToString() == "Achievements" ? "active" : "")" 
                                   href="@Url.Action("Profile", "Student")" 
                                   style="@(ViewContext.RouteData.Values["Action"].ToString() == "Profile" || ViewContext.RouteData.Values["Action"].ToString() == "EditProfile" || ViewContext.RouteData.Values["Action"].ToString() == "Grades" || ViewContext.RouteData.Values["Action"].ToString() == "Attendance" || ViewContext.RouteData.Values["Action"].ToString() == "Achievements" ? "border-bottom: 2px solid #007bff; background: none; color: #007bff; font-weight: 600;" : "color: #6c757d; font-weight: 500;")">Profile</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            
            <!-- Mobile Navigation Menu -->
            <div class="mobile-nav d-lg-none" id="mobile-nav" style="display: none;">
                <nav class="py-3" role="navigation">
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link btn-custom btn-md @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "btn-primary-custom" : "btn-secondary-custom")" 
                               href="@Url.Action("Dashboard", "Student")" 
                               style="width: 100%; text-align: left;">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link btn-custom btn-md @(ViewContext.RouteData.Values["Action"].ToString() == "Courses" ? "btn-primary-custom" : "btn-secondary-custom")" 
                               href="@Url.Action("Courses", "Student")" 
                               style="width: 100%; text-align: left;">
                                <i class="fas fa-book me-2"></i>Course
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link btn-custom btn-md @(ViewContext.RouteData.Values["Action"].ToString() == "TodoList" ? "btn-primary-custom" : "btn-secondary-custom")" 
                               href="@Url.Action("TodoList", "Student")" 
                               style="width: 100%; text-align: left;">
                                <i class="fas fa-tasks me-2"></i>To-Do List
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link btn-custom btn-md @(ViewContext.RouteData.Values["Action"].ToString() == "Notifications" ? "btn-primary-custom" : "btn-secondary-custom")" 
                               href="@Url.Action("Notifications", "Student")" 
                               style="width: 100%; text-align: left;">
                                <i class="fas fa-bell me-2"></i>Notifications
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a class="nav-link btn-custom btn-md @(ViewContext.RouteData.Values["Action"].ToString() == "Profile" ? "btn-primary-custom" : "btn-secondary-custom")" 
                               href="@Url.Action("Profile", "Student")" 
                               style="width: 100%; text-align: left;">
                                <i class="fas fa-user me-2"></i>Profile
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Back Button - Outside Header -->
    <div class="container-fluid px-4 py-3" style="background-color: #f5f5f5;">
        <div class="row">
            <div class="col-12">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-sm" style="border-radius: 20px; padding: 8px 16px;">
                    <i class="fas fa-arrow-left me-1"></i> Back
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>