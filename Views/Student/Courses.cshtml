@{
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">My Courses</h2>
            <p class="text-muted mb-0">View and manage your enrolled courses</p>
        </div>
    </div>

    <!-- Course Cards Grid -->
    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 12px; margin-bottom: 24px;">
        <!-- Course Card 1 -->
        <div class="card h-100" style="border: 1px solid #d1d5db; border-radius: 8px; background-color: white; box-shadow: 0 1px 2px rgba(0,0,0,0.06); height: 297px;">
            <div class="card-body p-3 d-flex flex-column">
                <!-- Course Title and Status -->
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div style="flex: 1;">
                        <h6 class="fw-bold mb-1" style="color: #1a202c; font-size: 0.95rem;">Computer Programming</h6>
                        <small style="color: #718096; font-size: 0.75rem;">CC101</small>
                    </div>
                    <span class="badge" style="background-color: #f0f0f0; color: #718096; padding: 2px 6px; border-radius: 3px; font-size: 0.65rem; font-weight: 500;">Completed</span>
                </div>

                <!-- Divider -->
                <hr style="margin: 8px 0; border: none; border-top: 1px solid #e5e7eb; opacity: 1;">

                <!-- Instructor Section -->
                <div class="d-flex align-items-center mb-3">
                    <div class="instructor-avatar me-2" style="width: 40px; height: 40px; background-color: #1a365d; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <span style="color: white; font-weight: 600; font-size: 0.85rem;">SJ</span>
                    </div>
                    <div style="flex: 1;">
                        <div class="fw-bold mb-0" style="color: #1a202c; font-size: 0.85rem;">Dr. Sarah Johnson</div>
                        <small style="color: #718096; font-size: 0.75rem;">
                            <i class="fas fa-calendar me-1"></i>Tuesday 3:00 - 6:00 PM
                        </small>
                    </div>
                </div>

                <!-- Course Stats -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-users me-1" style="color: #718096; font-size: 0.7rem;"></i>
                        <small style="color: #718096; font-size: 0.75rem;">50 Students</small>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-clock me-1" style="color: #718096; font-size: 0.7rem;"></i>
                        <small style="color: #718096; font-size: 0.75rem;">4 Months</small>
                    </div>
                </div>

                <!-- View Button -->
                <div class="mt-auto">
                    <a href="@Url.Action("ViewCourse", "Student", new { id = 1 })" class="btn w-100" style="background-color: #3182ce; color: white; border: none; border-radius: 6px; padding: 8px; font-weight: 600; font-size: 0.8rem; text-decoration: none;">
                        <i class="fas fa-eye me-2"></i>View
