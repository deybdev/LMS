    <!-- Semester Navigation -->
    <div class="d-flex justify-content-center mt-3">
        <div class="d-flex align-items-center">
            <button class="btn me-3" style="background-color: #f7fafc; border: 1px solid #e2e8f0; color: #4a5568; border-radius: 8px; padding: 8px 16px; font-weight: 500;" onclick="showPreviousSemester()">
                <i class="fas fa-chevron-left me-2"></i>Previous Semester
            </button>
            <button class="btn" style="background-color: #3182ce; color: white; border: none; border-radius: 8px; padding: 8px 16px; font-weight: 500;" onclick="showNextSemester()">
                Next Semester<i class="fas fa-chevron-right ms-2"></i>
            </button>
        </div>
    </div>

    <!-- JavaScript for Semester Navigation -->
    <script>
        function showPreviousSemester() {
            // Reload current page (completed courses)
            window.location.reload();
        }
        
        function showNextSemester() {
            // Navigate to ongoing courses
            window.location.href = '@Url.Action("OngoingCourses", "Student")';
        }
