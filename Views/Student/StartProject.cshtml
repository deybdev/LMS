<style>
    .upload-area {
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .upload-area:hover {
        border-color: #1852AC;
        background-color: #f0f4ff;
    }
    
    .file-item {
        display: flex;
        align-items: center;
        justify-content: between;
        padding: 10px;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        margin-bottom: 8px;
        background-color: #f8f9fa;
    }
    
    .file-item .file-name {
        flex: 1;
        font-size: 0.9rem;
        color: #333;
    }
    
    .file-item .file-size {
        font-size: 0.8rem;
        color: #6c757d;
        margin-right: 10px;
    }
    
    .file-item .remove-btn {
        background: none;
        border: none;
        color: #dc3545;
        cursor: pointer;
        padding: 2px 6px;
    }
</style>

<script>
    let uploadedFiles = [];

    function handleFileSelect(event) {
        const files = Array.from(event.target.files);
        const maxSize = 50 * 1024 * 1024; // 50MB
        
        files.forEach(file => {
            if (file.size > maxSize) {
                alert(`File ${file.name} is too large. Maximum size is 50MB.`);
                return;
            }
            
            if (!uploadedFiles.find(f => f.name === file.name)) {
                uploadedFiles.push(file);
            }
        });
        
        displayUploadedFiles();
        event.target.value = ''; // Reset input
    }

    function displayUploadedFiles() {
        const container = document.getElementById('uploadedFiles');
        
        if (uploadedFiles.length === 0) {
            container.style.display = 'none';
            return;
        }
        
        container.style.display = 'block';
        container.innerHTML = '<h6 class="fw-bold mb-2" style="color: #333; font-size: 0.9rem;">Uploaded Files:</h6>';
        
        uploadedFiles.forEach((file, index) => {
            const fileSize = (file.size / 1024 / 1024).toFixed(2) + ' MB';
            const fileItem = document.createElement('div');
            fileItem.className = 'file-item';
            fileItem.innerHTML = `
                <span class="file-name">${file.name}</span>
                <span class="file-size">${fileSize}</span>
                <button class="remove-btn" onclick="removeFile(${index})">
                    <i class="fas fa-times"></i>
                </button>
            `;
            container.appendChild(fileItem);
        });
    }

    function removeFile(index) {
        uploadedFiles.splice(index, 1);
        displayUploadedFiles();
    }

    // Make upload area clickable
    document.addEventListener('DOMContentLoaded', function() {
        const uploadArea = document.querySelector('.upload-area');
        uploadArea.addEventListener('click', function() {
            document.getElementById('fileUpload').click();
        });
        
        // Handle drag and drop
        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = '#1852AC';
            uploadArea.style.backgroundColor = '#f0f4ff';
        });
        
        uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = '#dee2e6';
            uploadArea.style.backgroundColor = '#f8f9fa';
        });
        
        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = '#dee2e6';
            uploadArea.style.backgroundColor = '#f8f9fa';
            
            const files = Array.from(e.dataTransfer.files);
            const event = { target: { files: files } };
            handleFileSelect(event);
        });
    });

    // Submit Modal Functions
    function showSubmitModal() {
        document.getElementById('submitModal').style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function hideSubmitModal() {
        document.getElementById('submitModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    function submitAssignment() {
        // Here you would typically send the data to the server
        alert('Assignment submitted successfully!');
        hideSubmitModal();
        // Optionally redirect to a success page or back to todo list
        // window.location.href = '/Student/TodoList';
    }
</script>

