@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="dashboard-container" style="background-color: #f5f5f5; min-height: 100vh; padding: 20px;">
    <!-- Welcome Section -->
    <div class="welcome-section mb-4">
        <div class="card border-0 shadow-sm" style="border-radius: 12px;">
            <div class="card-body p-4">
                <h2 class="fw-bold text-dark mb-2" style="font-size: 2rem;">Welcome back, John!</h2>
                <p class="text-muted mb-0" style="font-size: 1rem;">Here's what's happening with your studies today.</p>
            </div>
        </div>
    </div>

    <!-- Main Content Row -->
    <div class="row g-4">
        <!-- Left Column - Notifications -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm" style="border-radius: 12px;">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-bell text-primary me-2" style="font-size: 1.2rem;"></i>
                        <h4 class="fw-bold text-dark mb-0" style="font-size: 1.25rem;">Notification</h4>
                    </div>
                    
                    <div class="notification-list">
                        <!-- New Learning Resources -->
                        <div class="notification-item mb-3 pb-3" style="border-left: 4px solid #28a745; padding-left: 16px;">
                            <h6 class="fw-bold text-dark mb-1" style="font-size: 0.95rem;">New Learning Resources Available</h6>
                            <small class="text-muted">1 min ago</small>
                        </div>
                        
                        <!-- Grade Posted Items -->
                        <div class="notification-item mb-3 pb-3" style="border-left: 4px solid #6c757d; padding-left: 16px;">
                            <h6 class="fw-bold text-dark mb-1" style="font-size: 0.95rem;">Grade posted for Programming Lab Report</h6>
                            <small class="text-muted">1 hour ago</small>
                        </div>
                        
                        <div class="notification-item mb-3 pb-3" style="border-left: 4px solid #6c757d; padding-left: 16px;">
                            <h6 class="fw-bold text-dark mb-1" style="font-size: 0.95rem;">Grade posted for Programming Lab Report</h6>
                            <small class="text-muted">3 days ago</small>
                        </div>
                        
                        <div class="notification-item mb-3 pb-3" style="border-left: 4px solid #6c757d; padding-left: 16px;">
                            <h6 class="fw-bold text-dark mb-1" style="font-size: 0.95rem;">Grade posted for Programming Lab Report</h6>
                            <small class="text-muted">1 hour ago</small>
                        </div>
                    </div>
                    
                    <div class="text-end">
                        <a href="#" class="text-primary text-decoration-none" style="font-size: 0.9rem;">See All Notifications</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Reminders -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm" style="border-radius: 12px;">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-calendar-alt text-primary me-2" style="font-size: 1.2rem;"></i>
                        <h4 class="fw-bold text-dark mb-0" style="font-size: 1.25rem;">Reminders</h4>
                    </div>
                    
                    <div class="reminder-list">
                        <!-- Programming Quiz 1 -->
                        <div class="reminder-item d-flex justify-content-between align-items-center mb-3 p-3" style="background-color: #f8f9fa; border-radius: 8px;">
                            <div>
                                <h6 class="fw-bold text-dark mb-1" style="font-size: 0.95rem;">Programming Quiz</h6>
                                <small class="text-muted">October 2, 2024 • 10:00 AM</small>
                            </div>
                            <button class="btn btn-dark btn-sm px-3" style="border-radius: 20px; font-size: 0.8rem;">Tomorrow</button>
                        </div>
                        
                        <!-- Programming Quiz 2 -->
                        <div class="reminder-item d-flex justify-content-between align-items-center mb-3 p-3" style="background-color: #f8f9fa; border-radius: 8px;">
                            <div>
                                <h6 class="fw-bold text-dark mb-1" style="font-size: 0.95rem;">Programming Quiz</h6>
                                <small class="text-muted">October 2, 2024 • 10:00 AM</small>
                            </div>
                            <button class="btn btn-dark btn-sm px-3" style="border-radius: 20px; font-size: 0.8rem;">Tomorrow</button>
                        </div>
                    </div>
                    
                    <div class="text-end">
                        <a href="#" class="text-primary text-decoration-none" style="font-size: 0.9rem;">See All To-Do List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Academic Calendar Section -->
    <div class="calendar-section mt-4">
        <div class="card border-0 shadow-sm" style="border-radius: 12px;">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-calendar text-primary me-2" style="font-size: 1.2rem;"></i>
                        <h4 class="fw-bold text-dark mb-0" style="font-size: 1.25rem;">Academic Calendar</h4>
                    </div>
                    <div class="d-flex align-items-center">
                        <button class="btn btn-link text-dark p-0 me-2" id="prevMonth">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        <h5 class="fw-bold text-dark mb-0 mx-3" style="font-size: 1.1rem;">October 2025</h5>
                        <button class="btn btn-link text-dark p-0 ms-2" id="nextMonth">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Calendar Grid -->
                <div class="calendar-grid">
                    <div class="row text-center mb-2">
                        <div class="col fw-bold text-muted" style="font-size: 0.9rem;">SUN</div>
