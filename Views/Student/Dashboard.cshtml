    display: block;
    width: calc(100% - 4px);
    min-height: 38px;
    font-weight: 600;
    text-align: left;
    box-sizing: border-box;
    margin-left: 2px;
    margin-right: 2px;
    overflow: hidden;
    white-space: normal;
    word-wrap: break-word;
}

.event-item.classes {
    background-color: #28a745;
}

.event-item.assignment {
    background-color: #fd7e14;
}

.event-item.exam {
    background-color: #dc3545;
}

.event-item.school-event {
    background-color: #6f42c1;
}

.legend-color {
    width: 16px;
    height: 16px;
    border-radius: 3px;
    display: inline-block;
