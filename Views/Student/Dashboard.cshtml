                    </div>
                </div>

                <!-- Event Types Legend -->
                <div class="event-legend mt-4">
                    <h6 class="fw-bold text-dark mb-3">Event Types</h6>
                    <div class="d-flex justify-content-start align-items-center flex-wrap gap-4">
                        <div class="d-flex align-items-center">
                            <div class="legend-color classes me-2"></div>
                            <small class="text-dark">Classes</small>
                        </div>
                        <div class="d-flex align-items-center">
