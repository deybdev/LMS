                        <div class="col calendar-day">
                            <div class="day-number">25</div>
                        </div>
                    </div>

                    <!-- Week 5 -->
                    <div class="row calendar-week mb-2">
                        <div class="col calendar-day">
                            <div class="day-number">26</div>
                            <div class="event-item school-event">School Sunday Mass</div>
                        </div>
                        <div class="col calendar-day">
                            <div class="day-number">27</div>
