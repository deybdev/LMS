<style>
    .classwork-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 20px;
    }

    .classwork-card {
        background: white;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 20px;
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
    }

        .classwork-card:hover {
            border-color: var(--primary-color);
            box-shadow: 0 4px 12px rgba(24, 82, 172, 0.1);
        }

    .classwork-header {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 15px;
    }

    .classwork-icon {
        width: 40px;
        height: 40px;
        background: #f5f5f5;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666;
        font-size: 18px;
        flex-shrink: 0;
        transition: all 0.2s ease;
    }

    .classwork-title-section {
        flex: 1;
        min-width: 0;
    }

    .classwork-title-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 5px;
    }

    .classwork-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        word-break: break-word;
        line-height: 1.3;
        margin: 0;
        margin-bottom: 5px;
    }

    .classwork-type-badge {
