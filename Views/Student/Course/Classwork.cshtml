        font-size: 0.85rem;
    }

    .classwork-created-date {
        color: #999;
        font-size: 0.8rem;
        white-space: nowrap;
    }

    .classwork-details {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 15px;
        padding-top: 15px;
        border-top: 1px solid #f0f0f0;
    }

    .detail-item {
        flex: 1 1 150px; /* Grow, shrink, base width */
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .detail-label {
        color: #999;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        color: #333;
        font-size: 0.95rem;
        font-weight: 600;
        word-break: break-word;
    }

        .detail-value.overdue {
