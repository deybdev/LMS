@model LMS.Models.Course

@{
    ViewBag.Title = "Classwork";
    int courseId = ViewBag.CourseId ?? Model.Id;
    ViewBag.ActiveTab = "Classwork";
    var classworks = ViewBag.Classworks as List<dynamic> ?? new List<dynamic>();
}

<link rel="stylesheet" href="~/Content/teacherCourse.css" />
<link rel="stylesheet" href="~/Content/teacherViewCourse.css" />
<link rel="stylesheet" href="~/Content/announcementForm.css" />

<style>
    .classwork-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 20px;
    }

    .classwork-card {
        background: white;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 20px;
        transition: all 0.2s ease;
    }

    .classwork-card:hover {
        border-color: var(--primary-color);
        box-shadow: 0 4px 12px rgba(24, 82, 172, 0.1);
    }

    .classwork-header {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 15px;
    }

    .classwork-icon {
        width: 40px;
        height: 40px;
        background: #f5f5f5;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666;
        font-size: 18px;
        flex-shrink: 0;
    }

    .classwork-title-section {
        flex: 1;
    }

    .classwork-title-row {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 5px;
    }

    .classwork-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
    }

    .classwork-type-badge {
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: capitalize;
    }

    .badge-quiz {
        background: #e3f2fd;
        color: #1976d2;
    }

    .badge-project {
        background: #e8f5e9;
        color: #388e3c;
    }

    .badge-homework {
        background: #fff3e0;
        color: #f57c00;
    }

    .badge-assignment {
        background: #f3e5f5;
        color: #7b1fa2;
    }

    .classwork-course {
        color: #666;
        font-size: 0.85rem;
    }

    .classwork-type-info {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-top: 8px;
    }

    .classwork-type-label {
        color: #999;
        font-size: 0.85rem;
    }

    .classwork-created-date {
        color: #999;
        font-size: 0.8rem;
        margin-left: auto;
    }

    .classwork-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 15px;
        margin-bottom: 15px;
        padding-top: 15px;
        border-top: 1px solid #f0f0f0;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .detail-label {
        color: #999;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        color: #333;
        font-size: 0.95rem;
        font-weight: 600;
    }

    .detail-value.overdue {
        color: #d32f2f;
    }

    .detail-value.submitted {
        color: #388e3c;
    }

    .grade-display {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .grade-display.graded {
        color: #388e3c;
    }

    .grade-display.not-graded {
        color: #999;
    }

    .classwork-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-classwork {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }

    .btn-view-details {
        background: #f5f5f5;
        color: #666;
    }

    .btn-view-details:hover {
        background: #e8e8e8;
    }

    .btn-view-results {
        background: #f5f5f5;
        color: #666;
    }

    .btn-view-results:hover {
        background: #e8e8e8;
    }

    .btn-start-assignment {
        background: var(--dark-primary-color);
        color: white;
    }

    .btn-start-assignment:hover {
        background: var(--primary-color);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .status-indicator {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .status-submitted {
        background: #e8f5e9;
        color: #388e3c;
    }

    .status-graded {
        background: #e3f2fd;
        color: #1976d2;
    }

    .status-missing {
        background: #ffebee;
        color: #d32f2f;
    }

    .status-not-submitted {
        background: #fff3e0;
        color: #f57c00;
    }

    .no-classwork {
        text-align: center;
        padding: 60px 20px;
        color: #999;
    }

    .no-classwork i {
        font-size: 4rem;
        color: #ddd;
        margin-bottom: 20px;
    }

    .no-classwork h3 {
        color: #666;
        margin-bottom: 10px;
    }

    .no-classwork p {
        color: #999;
        line-height: 1.6;
    }

    .progress-bar {
        height: 6px;
        background: #f0f0f0;
        border-radius: 3px;
        overflow: hidden;
        margin-top: 5px;
    }

    .progress-fill {
        height: 100%;
        background: var(--primary-color);
        transition: width 0.3s ease;
    }

    .progress-fill.complete {
        background: #388e3c;
    }
</style>

<div class="admin-container">
    @Html.Partial("_BackButton")
    @Html.Partial("_CourseHeader", Model)
    @Html.Partial("_CourseNavigation", Model)

    <!-- Tab Content -->
    <div class="tab-content">
        <div class="tab-pane active">
            <div class="header-actions">
                <div class="announcements-title">
                    <i class="fas fa-tasks"></i>
                    <span>Assignments and Assessments</span>
                </div>
            </div>

            <div class="classwork-list">
                @if (classworks != null && classworks.Any())
                {
                    foreach (var classwork in classworks)
                    {
                        string typeClass = "badge-assignment";
                        string typeIcon = "fa-file-alt";
                        
                        if (classwork.ClassworkType == "Quiz")
                        {
                            typeClass = "badge-quiz";
                            typeIcon = "fa-question-circle";
                        }
                        else if (classwork.ClassworkType == "Project")
                        {
                            typeClass = "badge-project";
                            typeIcon = "fa-project-diagram";
                        }
                        else if (classwork.ClassworkType == "Homework")
                        {
                            typeClass = "badge-homework";
                            typeIcon = "fa-book";
                        }

                        string statusClass = "status-not-submitted";
                        string statusText = "Not Submitted";
                        
                        if (classwork.SubmissionStatus == "Graded")
                        {
                            statusClass = "status-graded";
                            statusText = "Graded";
                        }
                        else if (classwork.SubmissionStatus == "Submitted")
                        {
                            statusClass = "status-submitted";
                            statusText = "Submitted";
                        }
                        else if (classwork.Deadline != null && (DateTime)classwork.Deadline < DateTime.Now && classwork.SubmissionStatus == "Not Submitted")
                        {
                            statusClass = "status-missing";
                            statusText = "Missing";
                        }

                        bool isSubmitted = classwork.SubmissionStatus == "Submitted" || classwork.SubmissionStatus == "Graded";
                        bool isGraded = classwork.SubmissionStatus == "Graded";
                        DateTime? deadline = classwork.Deadline as DateTime?;

                        <div class="classwork-card">
                            <div class="classwork-header">
                                <div class="classwork-icon">
                                    <i class="fas @typeIcon"></i>
                                </div>
                                <div class="classwork-title-section">
                                    <div class="classwork-title-row">
                                        <h3 class="classwork-title">@classwork.Title</h3>
                                        <span class="classwork-type-badge @typeClass">@classwork.ClassworkType</span>
                                    </div>
                                    <div class="classwork-course">@Model.CourseTitle</div>
                                    <div class="classwork-type-info">
                                        <span class="status-indicator @statusClass">@statusText</span>
                                        <span class="classwork-created-date">Created @classwork.DateCreated.ToString("MM/dd/yyyy")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="classwork-details">
                                <div class="detail-item">
                                    <span class="detail-label">Due Date</span>
                                    <span class="detail-value @(deadline.HasValue && deadline.Value < DateTime.Now && !isSubmitted ? "overdue" : "")">
                                        @if (deadline.HasValue)
                                        {
                                            @deadline.Value.ToString("MM/dd/yy")
                                        }
                                        else
                                        {
                                            <text>No due date</text>
                                        }
                                    </span>
                                </div>

                                @if (isSubmitted && classwork.SubmittedAt != null)
                                {
                                    DateTime? submittedAt = classwork.SubmittedAt as DateTime?;
                                    <div class="detail-item">
                                        <span class="detail-label">Submitted</span>
                                        <span class="detail-value submitted">@(submittedAt.HasValue ? submittedAt.Value.ToString("MM/dd/yy") : "")</span>
                                    </div>
                                }

                                <div class="detail-item">
                                    <span class="detail-label">Points</span>
                                    <span class="detail-value">@classwork.Points pts</span>
                                </div>

                                <div class="detail-item">
                                    <span class="detail-label">Grade</span>
                                    @if (isGraded && classwork.Grade != null)
                                    {
                                        decimal? grade = classwork.Grade as decimal?;
                                        <span class="grade-display graded">@grade/@classwork.Points</span>
                                        if (classwork.Points > 0 && grade.HasValue)
                                        {
                                            var percentage = grade.Value / classwork.Points * 100;
                                            <div class="progress-bar">
                                                <div class="progress-fill @(percentage >= 100 ? "complete" : "")" style="width: @Math.Min(percentage, 100)%"></div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <span class="grade-display not-graded">Not graded</span>
                                    }
                                </div>
                            </div>

                            <div class="classwork-actions">
                                @if (isGraded || isSubmitted)
                                {
                                    <button class="btn-classwork btn-view-results" onclick="window.location.href='@Url.Action("ViewClasswork", "Student", new { id = courseId, classworkId = classwork.Id })'">
                                        <i class="fas fa-eye"></i>
                                        View @(isGraded ? "Results" : "Details")
                                    </button>
                                }
                                else
                                {
                                    <button class="btn-classwork btn-view-details" onclick="window.location.href='@Url.Action("ViewClasswork", "Student", new { id = courseId, classworkId = classwork.Id })'">
                                        <i class="fas fa-eye"></i>
                                        View Details
                                    </button>
                                    <button class="btn-classwork btn-start-assignment" onclick="window.location.href='@Url.Action("SubmitClasswork", "Student", new { id = courseId, classworkId = classwork.Id })'">
                                        <i class="fas fa-play"></i>
                                        Start Assignment
                                    </button>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-classwork">
                        <i class="fas fa-tasks"></i>
                        <h3>No Classwork Yet</h3>
                        <p>There are no assignments or assessments for this course yet.</p>
                        <p>Check back later for new assignments from your instructor.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Add any additional JavaScript functionality here
        $(document).ready(function() {
            console.log('Classwork page loaded');
        });
    </script>
}
