        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: capitalize;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .badge-quiz {
        background: #e3f2fd;
        color: #1976d2;
    }

    .badge-project {
        background: #e8f5e9;
        color: #388e3c;
    }

    .badge-homework {
        background: #fff3e0;
        color: #f57c00;
    }

    .badge-assignment {
        background: #f3e5f5;
        color: #7b1fa2;
    }

    .badge-exam {
        background: #ffebee;
        color: #d32f2f;
    }

    .badge-activity {
