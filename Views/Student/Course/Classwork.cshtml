        }

    .grade-display {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--primary-color);
    }

        .grade-display.graded {
            color: #388e3c;
        }

        .grade-display.not-graded {
            color: #999;
        }

    .classwork-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        flex-wrap: wrap;
    }

    .btn-classwork {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        min-height: 44px;
        justify-content: center;
        text-decoration: none;
        white-space: nowrap;
    }

    .btn-view-details {
        background: #f5f5f5;
        color: #666;
    }

        .btn-view-details:hover {
            background: #e8e8e8;
            text-decoration: none;
        }

    .btn-view-results {
        background: #f5f5f5;
        color: #666;
    }

        .btn-view-results:hover {
            background: #e8e8e8;
            text-decoration: none;
        }

    .btn-start-assignment {
        background: var(--dark-primary-color);
        color: white;
    }

        .btn-start-assignment:hover {
            background: var(--primary-color);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            text-decoration: none;
            color: white;
        }

    .status-indicator {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .status-submitted {
        background: #e8f5e9;
        color: #388e3c;
    }

    .status-graded {
        background: #e3f2fd;
        color: #1976d2;
    }

    .status-missing {
        background: #ffebee;
        color: #d32f2f;
    }

    .status-not-submitted {
        background: #fff3e0;
        color: #f57c00;
    }

    .no-classwork {
        text-align: center;
        padding: 60px 20px;
        color: #999;
        background: white;
        border-radius: 12px;
        border: 2px dashed #e0e0e0;
    }

        .no-classwork i {
            font-size: 4rem;
            color: #ddd;
            margin-bottom: 20px;
        }

        .no-classwork h3 {
            color: #666;
            margin-bottom: 10px;
            font-family: var(--archivo-plain-font);
        }

        .no-classwork p {
            color: #999;
            line-height: 1.6;
            margin-bottom: 0.5rem;
        }

            .no-classwork p:last-child {
                margin-bottom: 0;
            }

    .progress-bar {
        height: 6px;
        background: #f0f0f0;
        border-radius: 3px;
        overflow: hidden;
        margin-top: 5px;
    }

    .progress-fill {
        height: 100%;
        background: var(--primary-color);
        transition: width 0.3s ease;
    }

        .progress-fill.complete {
            background: #388e3c;
        }

