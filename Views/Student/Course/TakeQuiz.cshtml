        grid-template-columns: 1fr; /* Stack content vertically */
        padding: 20px;
    }

    .quiz-sidebar {
        position: relative;
        top: auto;
        margin-top: 20px;
        width: 100%;
    }

    .question-grid {
        gap: 6px;
    }

    .quiz-content {
        padding: 20px;
    }

    .quiz-header {
        padding: 15px 20px;
    }

    .quiz-title {
