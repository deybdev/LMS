@model LMS.Models.Course

@{
    ViewBag.Title = "Assigned Tasks";
    int courseId = ViewBag.CourseId ?? Model.Id;
    ViewBag.ActiveTab = "Assigned";
    var assignedTasks = ViewBag.AssignedTasks as List<dynamic> ?? new List<dynamic>();
    bool showingAllCourses = ViewBag.ShowingAllCourses ?? false;
}

<link rel="stylesheet" href="~/Content/teacherCourse.css" />
<link rel="stylesheet" href="~/Content/teacherViewCourse.css" />
<link rel="stylesheet" href="~/Content/announcementForm.css" />

<style>
    .assigned-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 20px;
    }

    .assigned-card {
        background: white;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
        padding: 20px;
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
    }

        .assigned-card:hover {
            border-color: var(--primary-color);
            box-shadow: 0 4px 12px rgba(24, 82, 172, 0.1);
        }

    .assigned-header {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 15px;
    }

    .assigned-icon {
        width: 40px;
        height: 40px;
        background: #f5f5f5;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666;
        font-size: 18px;
        flex-shrink: 0;
        transition: all 0.2s ease;
    }

    .assigned-title-section {
        flex: 1;
        min-width: 0;
    }

    .assigned-title-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 5px;
    }

    .assigned-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        word-break: break-word;
        line-height: 1.3;
        margin: 0;
        margin-bottom: 5px;
    }

    .assigned-type-badge {
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: capitalize;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .badge-quiz {
        background: #e3f2fd;
        color: #1976d2;
    }

    .badge-project {
        background: #e8f5e9;
        color: #388e3c;
    }

    .badge-homework {
        background: #fff3e0;
        color: #f57c00;
    }

    .badge-assignment {
        background: #f3e5f5;
        color: #7b1fa2;
    }

    .badge-exam {
        background: #ffebee;
        color: #d32f2f;
    }

    .badge-activity {
        background: #e0f2f1;
        color: #00796b;
    }

    .course-info-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 3px 8px;
        background: #f8f9fa;
        color: #666;
        border-radius: 12px;
        font-size: 0.7rem;
        font-weight: 500;
        margin-top: 5px;
        border: 1px solid #e0e0e0;
    }

    .assigned-course {
        color: #666;
        font-size: 0.85rem;
        word-break: break-word;
    }

    .assigned-type-info {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-top: 8px;
        flex-wrap: wrap;
    }

    .assigned-created-date {
        color: #999;
        font-size: 0.8rem;
        white-space: nowrap;
    }

    .assigned-details {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 15px;
        padding-top: 15px;
        border-top: 1px solid #f0f0f0;
    }

    .detail-item {
        flex: 1 1 150px;
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .detail-label {
        color: #999;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        color: #333;
        font-size: 0.95rem;
        font-weight: 600;
        word-break: break-word;
    }

        .detail-value.overdue {
            color: #d32f2f;
        }

        .detail-value.due-soon {
            color: #f57c00;
        }

    .assigned-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        flex-wrap: wrap;
    }

    .btn-assigned {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        min-height: 44px;
        justify-content: center;
        text-decoration: none;
        white-space: nowrap;
    }

    .btn-view-details {
        background: #f5f5f5;
        color: #666;
    }

        .btn-view-details:hover {
            background: #e8e8e8;
            text-decoration: none;
        }

    .btn-start-task {
        background: var(--dark-primary-color);
        color: white;
    }

        .btn-start-task:hover {
            background: var(--primary-color);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            text-decoration: none;
            color: white;
        }

    .status-indicator {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .status-assigned {
        background: #fff3e0;
        color: #f57c00;
    }

    .status-in-progress {
        background: #e3f2fd;
        color: #1976d2;
    }

    .no-assigned {
        text-align: center;
        padding: 60px 20px;
        color: #999;
        background: white;
        border-radius: 12px;
        border: 2px dashed #e0e0e0;
    }

        .no-assigned i {
            font-size: 4rem;
            color: #ddd;
            margin-bottom: 20px;
        }

        .no-assigned h3 {
            color: #666;
            margin-bottom: 10px;
            font-family: var(--archivo-plain-font);
        }

        .no-assigned p {
            color: #999;
            line-height: 1.6;
            margin-bottom: 0.5rem;
        }

            .no-assigned p:last-child {
                margin-bottom: 0;
            }

    /* Header Section */
    .header-actions {
        margin-bottom: 1rem;
    }

    .tasks-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--dark-primary-color);
        font-family: var(--archivo-plain-font);
    }

        .tasks-title i {
            color: var(--primary-color);
        }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .admin-container {
            padding: 1rem 1.5rem;
        }

        .assigned-list {
            gap: 16px;
            margin-top: 16px;
        }

        .assigned-card {
            padding: 18px;
        }
    }

    @@media (max-width: 768px) {
        .admin-container {
            padding: 0.75rem 1rem;
        }

        .assigned-list {
            gap: 12px;
            margin-top: 12px;
        }

        .assigned-card {
            padding: 16px;
            border-radius: 10px;
        }

        .assigned-header {
            gap: 12px;
            margin-bottom: 12px;
        }

        .assigned-icon {
            width: 36px;
            height: 36px;
            font-size: 16px;
        }

        .assigned-title {
            font-size: 1rem;
        }

        .assigned-title-row {
            gap: 8px;
        }

        .assigned-type-badge {
            font-size: 0.7rem;
            padding: 3px 8px;
        }

        .assigned-course {
            font-size: 0.8rem;
        }

        .assigned-details {
            flex-direction: row;
            flex-wrap: wrap;
            gap: 12px;
        }

        .detail-label {
            font-size: 0.7rem;
        }

        .detail-value {
            font-size: 0.9rem;
        }

        .assigned-actions {
            gap: 8px;
            margin-top: 12px;
        }

        .btn-assigned {
            padding: 8px 16px;
            font-size: 0.85rem;
            gap: 6px;
        }

        .header-actions {
            text-align: center;
            margin-bottom: 0.75rem;
        }

        .tasks-title {
            font-size: 1.2rem;
            justify-content: center;
        }

        .no-assigned {
            padding: 40px 16px;
        }

            .no-assigned i {
                font-size: 3rem;
            }

            .no-assigned h3 {
                font-size: 1.2rem;
            }

            .no-assigned p {
                font-size: 0.9rem;
            }
    }

    @@media (max-width: 576px) {
        .admin-container {
            padding: 0.5rem 0.75rem;
        }

        .assigned-list {
            gap: 10px;
            margin-top: 10px;
        }

        .assigned-card {
            padding: 12px;
            border-radius: 8px;
        }

        .assigned-header {
            margin-bottom: 10px;
        }

        .assigned-icon {
            width: 32px;
            height: 32px;
            font-size: 14px;
        }

        .assigned-title-section {
            width: 100%;
        }

        .assigned-title-row {
            gap: 6px;
        }

        .assigned-title {
            font-size: 0.95rem;
            text-align: center;
        }

        .assigned-type-badge {
            font-size: 0.65rem;
            padding: 2px 6px;
        }

        .assigned-course {
            font-size: 0.75rem;
        }

        .assigned-details {
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            padding-top: 10px;
        }

        .detail-item {
            text-align: center;
        }

        .detail-label {
            font-size: 0.65rem;
        }

        .detail-value {
            font-size: 0.85rem;
        }

        .assigned-actions {
            gap: 8px;
            margin-top: 10px;
        }

        .btn-assigned {
            width: 100%;
            padding: 10px 16px;
            font-size: 0.8rem;
            min-height: 40px;
        }

        .assigned-actions {
            flex-wrap: nowrap;
        }

        .status-indicator {
            font-size: 0.7rem;
            padding: 3px 8px;
        }

        .tasks-title {
            font-size: 1.1rem;
            flex-direction: column;
            gap: 0.25rem;
        }

        .no-assigned {
            padding: 30px 12px;
        }

            .no-assigned i {
                font-size: 2.5rem;
            }

            .no-assigned h3 {
                font-size: 1.1rem;
            }

            .no-assigned p {
                font-size: 0.85rem;
            }
    }

    @@media (max-width: 480px) {
        .admin-container {
            padding: 0.5rem;
        }

        .assigned-card {
            padding: 10px;
        }

        .assigned-title {
            font-size: 0.9rem;
            line-height: 1.4;
        }

        .assigned-type-badge {
            font-size: 0.6rem;
            padding: 2px 5px;
        }

        .assigned-created-date {
            font-size: 0.65rem;
        }

        .assigned-details {
            grid-template-columns: 1fr;
            gap: 8px;
        }

        .detail-label {
            font-size: 0.6rem;
        }

        .detail-value {
            font-size: 0.8rem;
        }

        .btn-assigned {
            padding: 8px 12px;
            font-size: 0.75rem;
        }

        .status-indicator {
            font-size: 0.65rem;
            padding: 2px 6px;
        }

        .no-assigned {
            padding: 25px 10px;
        }

            .no-assigned i {
                font-size: 2rem;
            }

            .no-assigned h3 {
                font-size: 1rem;
            }

            .no-assigned p {
                font-size: 0.8rem;
            }
    }

    @@media (max-width: 360px) {
        .assigned-title-row {
            gap: 4px;
        }

        .assigned-type-info {
            gap: 3px;
        }

        .assigned-details {
            gap: 6px;
        }

        .assigned-actions {
            gap: 6px;
        }

        .btn-assigned {
            font-size: 0.7rem;
            padding: 6px 10px;
        }

        .assigned-title {
            font-size: 0.85rem;
        }

        .no-assigned {
            padding: 20px 8px;
        }

            .no-assigned i {
                font-size: 1.8rem;
            }

            .no-assigned h3 {
                font-size: 0.95rem;
            }

            .no-assigned p {
                font-size: 0.75rem;
            }
    }

    /* Touch device optimizations */
    @@media (hover: none) and (pointer: coarse) {
        .assigned-card:hover {
            transform: none;
            box-shadow: 0 2px 4px rgba(24, 82, 172, 0.05);
        }

        .assigned-card:active {
            background: #f8f9fa;
            transform: scale(0.99);
        }

        .btn-assigned:hover {
            transform: none;
        }

        .btn-start-task:hover {
            transform: none;
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.2);
        }

        .btn-assigned:active {
            transform: scale(0.95);
        }

        .btn-start-task:active {
            background: var(--primary-color);
        }

        .btn-view-details:active {
            background: #ddd;
        }
    }

    /* Accessibility improvements */
    .btn-assigned:focus {
        outline: 2px solid var(--primary-color);
        outline-offset: 2px;
    }

    /* Reduced motion preference */
    @@media (prefers-reduced-motion: reduce) {
        .assigned-card,
        .btn-assigned {
            transition: none;
        }
    }
</style>

<div class="admin-container">
    @Html.Partial("_BackButton")
    <div class="page-header">
        <div class="header-content">
            <div class="header-text">
                <h1>Todo List</h1>
                <p class="subtitle">Check your pending and completed tasks for each course.</p>
            </div>
        </div>
    </div>
    @Html.Partial("_TodoNavigation", Model)

    <!-- Tab Content -->
    <div class="tab-content">
        <div class="tab-pane active">
            <div class="header-actions">
                <div class="tasks-title">
                    <i class="fas fa-clipboard-list"></i>
                    <span>Assigned Tasks</span>
                </div>
            </div>

            <div class="assigned-list">
                @if (assignedTasks != null && assignedTasks.Any())
                {
                    foreach (var task in assignedTasks)
                    {
                        string typeClass = "badge-assignment";
                        string typeIcon = "fa-file-alt";

                        if (task.ClassworkType == "Quiz")
                        {
                            typeClass = "badge-quiz";
                            typeIcon = "fa-question-circle";
                        }
                        else if (task.ClassworkType == "Project")
                        {
                            typeClass = "badge-project";
                            typeIcon = "fa-project-diagram";
                        }
                        else if (task.ClassworkType == "Homework")
                        {
                            typeClass = "badge-homework";
                            typeIcon = "fa-book";
                        }
                        else if (task.ClassworkType == "Exam")
                        {
                            typeClass = "badge-exam";
                            typeIcon = "fa-file-signature";
                        }
                        else if (task.ClassworkType == "Activity")
                        {
                            typeClass = "badge-activity";
                            typeIcon = "fa-tasks";
                        }

                        string statusClass = "status-assigned";
                        string statusText = "Not Started";

                        if (task.SubmissionStatus == "Submitted")
                        {
                            statusClass = "status-in-progress";
                            statusText = "Submitted";
                        }
                        else if (task.SubmissionStatus == "Graded")
                        {
                            statusClass = "status-in-progress";
                            statusText = "Graded";
                        }

                        bool isOverdue = task.Deadline != null && (DateTime)task.Deadline < DateTime.Now && task.SubmissionStatus == "Not Submitted";
                        bool isDueSoon = task.Deadline != null && (DateTime)task.Deadline > DateTime.Now && (DateTime)task.Deadline <= DateTime.Now.AddHours(24);

                        DateTime? deadline = task.Deadline as DateTime?;

                        <div class="assigned-card">
                            <div class="assigned-header">
                                <div class="assigned-icon">
                                    <i class="fas @typeIcon"></i>
                                </div>
                                <div class="assigned-title-section">
                                    <div class="assigned-title-row">
                                        <div>
                                            <h3 class="assigned-title">@task.Title</h3>
                                            <span class="status-indicator @statusClass">@statusText</span>
                                        </div>
                                        <div>
                                            <span class="assigned-created-date me-3">Assigned @task.DateCreated.ToString("MM/dd/yyyy hh:mm tt")</span>
                                            <span class="assigned-type-badge @typeClass">@task.ClassworkType</span>
                                        </div>
                                    </div>
                                    <div class="assigned-type-info">
                                    </div>
                                </div>
                            </div>

                            <div class="assigned-details">
                                <div class="detail-item">
                                    <span class="detail-label">Due Date</span>
                                    <span class="detail-value @(isOverdue ? "overdue" : isDueSoon ? "due-soon" : "")">
                                        @if (deadline.HasValue)
                                        {
                                            @deadline.Value.ToString("MM/dd/yy hh:mm tt")
                                        }
                                        else
                                        {
                                            <text>No due date</text>
                                        }
                                    </span>
                                </div>

                                <div class="detail-item">
                                    <span class="detail-label">Points</span>
                                    <span class="detail-value">@task.Points pts</span>
                                </div>

                                <div class="detail-item">
                                    <span class="detail-label">Course</span>
                                    <span class="detail-value">@task.CourseTitle</span>
                                </div>

                                @if (task.SubmissionStatus == "Graded" && task.Grade != null)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">Grade</span>
                                        <span class="detail-value">@task.Grade/@task.Points</span>
                                    </div>
                                }
                            </div>

                            <div class="assigned-actions">
                                @if (task.SubmissionStatus == "Graded" || task.SubmissionStatus == "Submitted")
                                {
                                    <a class="btn-assigned btn-view-details" href="@Url.Action("ViewClasswork", "Student", new { id = task.CourseId, classworkId = task.Id })">
                                        <i class="fas fa-eye"></i>
                                        View @(task.SubmissionStatus == "Graded" ? "Results" : "Submission")
                                    </a>
                                }
                                else
                                {
                                    <a class="btn-assigned btn-view-details" href="@Url.Action("ViewClasswork", "Student", new { id = task.CourseId, classworkId = task.Id })">
                                        <i class="fas fa-eye"></i>
                                        View Details
                                    </a>
                                    <a class="btn-assigned btn-start-task" href="@Url.Action("SubmitClasswork", "Student", new { id = task.CourseId, classworkId = task.Id })">
                                        <i class="fas fa-play"></i>
                                        Start Task
                                    </a>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-assigned">
                        <i class="fas fa-clipboard-list"></i>
                        <h3>No Assigned Tasks Yet</h3>
                        <p>You don't have any assigned tasks at the moment.</p>
                        <p>New tasks will appear here when your instructors assign them.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
