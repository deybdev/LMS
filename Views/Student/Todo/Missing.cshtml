@model LMS.Models.Course

@{
    ViewBag.Title = "Missing Tasks";
    int courseId = ViewBag.CourseId ?? Model.Id;
    ViewBag.ActiveTab = "Missing";
    var missingTasks = ViewBag.MissingTasks as List<dynamic> ?? new List<dynamic>();
    bool showingAllCourses = ViewBag.ShowingAllCourses ?? false;
}

<link rel="stylesheet" href="~/Content/teacherCourse.css" />
<link rel="stylesheet" href="~/Content/teacherViewCourse.css" />
<link rel="stylesheet" href="~/Content/announcementForm.css" />

<style>
    .missing-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 20px;
    }

    .missing-card {
        background: white;
        border: 1px solid #ffcdd2;
        border-radius: 12px;
        padding: 20px;
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
    }

        .missing-card:hover {
            border-color: #d32f2f;
            box-shadow: 0 4px 12px rgba(211, 47, 47, 0.15);
        }

    .missing-header {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        margin-bottom: 15px;
    }

    .missing-icon {
        width: 40px;
        height: 40px;
        background: #ffebee;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #d32f2f;
        font-size: 18px;
        flex-shrink: 0;
    }

    .missing-title-section {
        flex: 1;
        min-width: 0;
    }

    .missing-title-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
        margin-bottom: 5px;
    }

    .missing-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
        word-break: break-word;
        line-height: 1.3;
        margin: 0;
        margin-bottom: 5px;
    }

    .missing-type-badge {
        padding: 4px 10px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: capitalize;
        white-space: nowrap;
        flex-shrink: 0;
    }

    /* Add specific styling for each type */
    .badge-quiz {
        background: #ffebee;
        color: #d32f2f;
        border: 1px solid #ffcdd2;
    }

    .badge-project {
        background: #ffebee;
        color: #d32f2f;
        border: 1px solid #ffcdd2;
    }

    .badge-homework {
        background: #ffebee;
        color: #d32f2f;
        border: 1px solid #ffcdd2;
    }

    .badge-assignment {
        background: #ffebee;
        color: #d32f2f;
        border: 1px solid #ffcdd2;
    }

    .badge-exam {
        background: #ffebee;
        color: #d32f2f;
        border: 1px solid #ffcdd2;
    }

    .badge-activity {
        background: #ffebee;
        color: #d32f2f;
        border: 1px solid #ffcdd2;
    }

    .course-info-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 3px 8px;
        background: #f8f9fa;
        color: #666;
        border-radius: 12px;
        font-size: 0.7rem;
        font-weight: 500;
        margin-top: 5px;
        border: 1px solid #e0e0e0;
    }

    .missing-course {
        color: #666;
        font-size: 0.85rem;
        word-break: break-word;
    }

    .missing-created-date {
        color: #d32f2f;
        font-size: 0.8rem;
        white-space: nowrap;
        font-weight: 600;
    }

    .missing-details {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 15px;
        padding-top: 15px;
        border-top: 1px solid #ffcdd2;
    }

    .detail-item {
        flex: 1 1 150px;
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .detail-label {
        color: #999;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        color: #333;
        font-size: 0.95rem;
        font-weight: 600;
        word-break: break-word;
    }

        .detail-value.overdue {
            color: #d32f2f;
            font-weight: 700;
        }

    .missing-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        flex-wrap: wrap;
    }

    .btn-missing {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        min-height: 44px;
        justify-content: center;
        text-decoration: none;
        white-space: nowrap;
    }

    .btn-view-details {
        background: #f5f5f5;
        color: #666;
        border: 1px solid #ddd;
    }

        .btn-view-details:hover {
            background: #e8e8e8;
            text-decoration: none;
        }

    .btn-submit-now {
        background: #d32f2f;
        color: white;
    }

        .btn-submit-now:hover {
            background: #b71c1c;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(211, 47, 47, 0.3);
            text-decoration: none;
            color: white;
        }

    .assigned-created-date {
        color: #999;
        font-size: 0.8rem;
        white-space: nowrap;
    }

    .status-indicator {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
        white-space: nowrap;
        background: #ffebee;
        color: #d32f2f;
    }

    .overdue-indicator {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 6px 12px;
        background: #d32f2f;
        color: white;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        margin-top: 10px;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.7; }
    }

    .no-missing {
        text-align: center;
        padding: 60px 20px;
        color: #999;
        background: white;
        border-radius: 12px;
        border: 2px dashed #4caf50;
    }

        .no-missing i {
            font-size: 4rem;
            color: #4caf50;
            margin-bottom: 20px;
        }

        .no-missing h3 {
            color: #4caf50;
            margin-bottom: 10px;
            font-family: var(--archivo-plain-font);
            font-weight: 600;
        }

        .no-missing p {
            color: #666;
            line-height: 1.6;
            margin-bottom: 0.5rem;
        }

            .no-missing p:last-child {
                margin-bottom: 0;
            }

    /* Header Section */
    .header-actions {
        margin-bottom: 1rem;
    }

    .tasks-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--dark-primary-color);
        font-family: var(--archivo-plain-font);
    }

        .tasks-title i {
            color: #d32f2f;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .missing-list {
            gap: 12px;
            margin-top: 12px;
        }

        .missing-card {
            padding: 16px;
            border-radius: 10px;
        }

        .missing-header {
            gap: 12px;
            margin-bottom: 12px;
        }

        .missing-icon {
            width: 36px;
            height: 36px;
            font-size: 16px;
        }

        .missing-title {
            font-size: 1rem;
        }

        .missing-actions {
            gap: 8px;
            margin-top: 12px;
        }

        .btn-missing {
            padding: 8px 16px;
            font-size: 0.85rem;
        }

        .no-missing {
            padding: 40px 16px;
        }

            .no-missing i {
                font-size: 3rem;
            }

            .no-missing h3 {
                font-size: 1.2rem;
            }
    }
</style>

<div class="admin-container">
    @Html.Partial("_BackButton")
    <div class="page-header">
        <div class="header-content">
            <div class="header-text">
                <h1>Todo List</h1>
                <p class="subtitle">Check your pending and completed tasks for each course.</p>
            </div>

        </div>
    </div>
    @Html.Partial("_TodoNavigation", Model)

    <!-- Tab Content -->
    <div class="tab-content">
        <div class="tab-pane active">
            <div class="header-actions">
                <div class="tasks-title">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>Missing Tasks</span>
                </div>
            </div>

            <div class="missing-list">
                @if (missingTasks != null && missingTasks.Any())
                {
                    foreach (var task in missingTasks)
                    {
                        string typeClass = "badge-assignment";
                        string typeIcon = "fa-file-alt";

                        if (task.ClassworkType == "Quiz")
                        {
                            typeClass = "badge-quiz";
                            typeIcon = "fa-question-circle";
                        }
                        else if (task.ClassworkType == "Project")
                        {
                            typeClass = "badge-project";
                            typeIcon = "fa-project-diagram";
                        }
                        else if (task.ClassworkType == "Homework")
                        {
                            typeClass = "badge-homework";
                            typeIcon = "fa-book";
                        }
                        else if (task.ClassworkType == "Exam")
                        {
                            typeClass = "badge-exam";
                            typeIcon = "fa-file-signature";
                        }
                        else if (task.ClassworkType == "Activity")
                        {
                            typeClass = "badge-activity";
                            typeIcon = "fa-tasks";
                        }

                        DateTime? deadline = task.Deadline as DateTime?;

                        <div class="missing-card">
                            <div class="missing-header">
                                <div class="missing-icon">
                                    <i class="fas @typeIcon"></i>
                                </div>
                                <div class="missing-title-section">
                                    <div class="missing-title-row">
                                        <div>
                                            <h3 class="missing-title">@task.Title</h3>
                                            <span class="status-indicator">
                                                <i class="fas fa-clock"></i>
                                                Missed
                                            </span>
                                        </div>
                                        <div>
                                            <span class="assigned-created-date me-3">Assigned @task.DateCreated.ToString("MM/dd/yyyy hh:mm tt")</span>
                                            <span class="missing-type-badge @typeClass">@task.ClassworkType</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="missing-details">
                                <div class="detail-item">
                                    <span class="detail-label">Due Date</span>
                                    <span class="detail-value overdue">
                                        @if (deadline.HasValue)
                                        {
                                            @deadline.Value.ToString("MM/dd/yy hh:mm tt")
                                        }
                                        else
                                        {
                                            <text>No due date</text>
                                        }
                                    </span>
                                </div>

                                <div class="detail-item">
                                    <span class="detail-label">Points</span>
                                    <span class="detail-value">@task.Points pts</span>
                                </div>

                                <div class="detail-item">
                                    <span class="detail-label">Course</span>
                                    <span class="detail-value">@task.CourseTitle</span>
                                </div>
                            </div>

                            <div class="missing-actions">
                                <a class="btn-missing btn-view-details" href="@Url.Action("ViewClasswork", "Student", new { id = task.CourseId, classworkId = task.Id })">
                                    <i class="fas fa-eye"></i>
                                    View Details
                                </a>
                                <a class="btn-missing btn-submit-now" href="@Url.Action("SubmitClasswork", "Student", new { id = task.CourseId, classworkId = task.Id })">
                                    <i class="fas fa-upload"></i>
                                    Submit Now
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-missing">
                        <i class="fas fa-check-circle"></i>
                        <h3>Great Job! No Missing Tasks</h3>
                        <p>You're all caught up with your assignments.</p>
                        <p>Keep up the excellent work!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            console.log('Missing tasks page loaded');
        });
    </script>
}