<!-- Success Modal -->
<div id="successModal" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); display: none; justify-content: center; align-items: center; z-index: 10000;">
    <div style="background-color: white; border-radius: 12px; padding: 32px; text-align: center; max-width: 400px; width: 90%; box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);">
        <!-- Success Icon -->
        <div style="margin-bottom: 16px;">
            <div style="width: 60px; height: 60px; background-color: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                <i class="fas fa-check" style="color: white; font-size: 1.5rem;"></i>
            </div>
        </div>
        
        <!-- Modal Content -->
        <h3 style="color: #1e293b; font-weight: 700; font-size: 1.25rem; margin-bottom: 8px;">Announcement Posted</h3>
        <p style="color: #64748b; font-size: 0.95rem; line-height: 1.5; margin-bottom: 24px;">Your announcement has been successfully posted and is now visible to all users.</p>
        
        <!-- Okay Button -->
        <button onclick="closeSuccessModal()" style="background-color: #2563eb; color: white; border: none; border-radius: 6px; padding: 10px 24px; font-weight: 600; font-size: 0.9rem; cursor: pointer; min-width: 80px;">
            Okay
        </button>
    </div>
</div>

<script>
// Check if we're coming back from posting
window.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const isPosted = urlParams.get('posted');
    const announcementText = urlParams.get('text');
    
    if (isPosted === 'true') {
        // Show success modal
        document.getElementById('successModal').style.display = 'flex';
        document.body.style.overflow = 'hidden';
        
        // Add new announcement to the top of the list if there's text
        if (announcementText) {
            addNewAnnouncement(announcementText);
        }
        
        // Clean URL by removing query parameters
        const cleanUrl = window.location.pathname;
        window.history.replaceState({}, '', cleanUrl);
    }
});

function addNewAnnouncement(text) {
    // Create new announcement element
    const now = new Date();
    const timeAgo = "1 min ago";
    
    const newAnnouncementHTML = `
        <div style="border: 2px solid #d1d5db; border-radius: 12px; background-color: white; margin-bottom: 16px; padding: 20px; box-shadow: 0 1px 2px rgba(0,0,0,0.05);">
            <div style="display: flex; justify-content: between; align-items: flex-start;">
                <div style="display: flex; align-items: flex-start; flex: 1;">
                    <div style="margin-right: 16px; margin-top: 2px;">
                        <div style="width: 40px; height: 40px; background-color: #1e3a8a; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <span style="color: white; font-weight: 600; font-size: 0.9rem;">JD</span>
                        </div>
                    </div>
                    <div style="flex: 1;">
                        <div style="margin-bottom: 8px;">
                            <div style="color: #1e293b; font-weight: 600; font-size: 0.95rem;">John Doe</div>
                            <small style="color: #64748b; font-size: 0.8rem;">Student</small>
                        </div>
                        
                        <div style="margin-bottom: 8px;">
                            <p style="color: #374151; font-size: 0.9rem; margin: 0;">${text}</p>
                        </div>
                        
                        <!-- Attached Files (if any from the PostAnnouncement page) -->
                        <div style="margin-top: 16px; display: flex; gap: 12px;">
                            <!-- File 1 -->
                            <div style="display: flex; align-items: center; background-color: #f8fafc; border: 1px solid #e2e8f0; border-radius: 8px; padding: 8px 12px;">
                                <i class="fas fa-file-pdf" style="color: #dc2626; font-size: 1rem; margin-right: 8px;"></i>
                                <div>
                                    <div style="font-size: 0.8rem; font-weight: 500; color: #374151;">Group1_Report.pdf</div>
                                    <div style="font-size: 0.7rem; color: #6b7280;">1.3 MB</div>
                                </div>
                                <button style="margin-left: 8px; background: none; border: none; color: #6b7280; cursor: pointer;">
                                    <i class="fas fa-download" style="font-size: 0.8rem;"></i>
                                </button>
                            </div>
                            
                            <!-- File 2 -->
                            <div style="display: flex; align-items: center; background-color: #f8fafc; border: 1px solid #e2e8f0; border-radius: 8px; padding: 8px 12px;">
                                <i class="fas fa-file-pdf" style="color: #dc2626; font-size: 1rem; margin-right: 8px;"></i>
                                <div>
                                    <div style="font-size: 0.8rem; font-weight: 500; color: #374151;">Group1_Report.pdf</div>
                                    <div style="font-size: 0.7rem; color: #6b7280;">1.3 MB</div>
                                </div>
                                <button style="margin-left: 8px; background: none; border: none; color: #6b7280; cursor: pointer;">
                                    <i class="fas fa-download" style="font-size: 0.8rem;"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div style="text-align: right; margin-left: 20px; display: flex; flex-direction: column; align-items: flex-end;">
                    <div style="color: #9ca3af; font-size: 0.8rem; margin-bottom: 16px;">${timeAgo}</div>
                    <button style="background-color: #f8fafc; border: 1px solid #e2e8f0; color: #475569; border-radius: 6px; padding: 6px 12px; font-weight: 500; font-size: 0.8rem; cursor: pointer; display: flex; align-items: center; gap: 6px;">
                        <i class="fas fa-eye"></i>View Details
                    </button>
                </div>
            </div>
        </div>
    `;
    
    // Insert the new announcement at the top of the announcements list
    const announcementsSection = document.querySelector('[style*="Announcements and Discussions"]').closest('div').parentElement;
    const firstAnnouncement = announcementsSection.querySelector('[style*="border: 2px solid #d1d5db"]');
    
    if (firstAnnouncement) {
        firstAnnouncement.insertAdjacentHTML('beforebegin', newAnnouncementHTML);
    }
}

function closeSuccessModal() {
    document.getElementById('successModal').style.display = 'none';
    document.body.style.overflow = 'auto';
}

// Close modal when clicking outside
document.getElementById('successModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeSuccessModal();
    }
});

// Close modal with Escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && document.getElementById('successModal').style.display === 'flex') {
        closeSuccessModal();
    }
});
</script>