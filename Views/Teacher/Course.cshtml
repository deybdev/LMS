@{
    ViewBag.Title = "My Courses";
}

<link rel="stylesheet" href="~/Content/teacherCourse.css" />

<div class="admin-container">
    <div class="page-header">
        <div class="header-content">
            <div class="header-text">
                <h1>My Courses</h1>
                <p class="subtitle">View and manage your assigned courses.</p>
            </div>
        </div>
    </div>

    <div class="courses-container">
        <div class="courses-grid" id="coursesGrid">

            <!-- Sample course cards -->
            <div class="course-card ongoing">
                <div class="course-header">
                    <span class="course-code">IT101</span>
                </div>

                <div class="teacher-section">
                    <div class="teacher-avatar">
                        <span>3A</span>
                    </div>
                    <div class="course-info">
                        <h4>Introduction to Programming</h4>
                        <p>
                            <i class="fa-regular fa-calendar"></i>
                            MON - 8:00 AM - 10:00 AM
                        </p>
                    </div>
                </div>

                <div class="course-stats">
                    <div class="stat-item">
                        <i class="fas fa-users"></i>
                        <span>25 Students</span>
                    </div>
                    <div class="stat-item">
                        <i class="fas fa-clock"></i>
                        <span>2025 - 2026</span>
                    </div>
                </div>

                <div class="course-footer">
                    <button class="btn-view-course">
                        <i class="fas fa-eye"></i> View
                    </button>
                </div>
            </div>

            <div class="course-card ongoing">
                <div class="course-header">
                    <span class="course-code">CS202</span>
                </div>

                <div class="teacher-section">
                    <div class="teacher-avatar">
                        <span>2B</span>
                    </div>
                    <div class="course-info">
                        <h4>Data Structures and Algorithms</h4>
                        <p>
                            <i class="fa-regular fa-calendar"></i>
                            WED - 10:00 AM - 12:00 PM
                        </p>
                    </div>
                </div>

                <div class="course-stats">
                    <div class="stat-item">
                        <i class="fas fa-users"></i>
                        <span>30 Students</span>
                    </div>
                    <div class="stat-item">
                        <i class="fas fa-clock"></i>
                        <span>2025 - 2026</span>
                    </div>
                </div>

                <div class="course-footer">
                    <button class="btn-view-course">
                        <i class="fas fa-eye"></i> View
                    </button>
                </div>
            </div>

            <div class="course-card ongoing">
                <div class="course-header">
                    <span class="course-code">IT305</span>
                </div>

                <div class="teacher-section">
                    <div class="teacher-avatar">
                        <span>4C</span>
                    </div>
                    <div class="course-info">
                        <h4>Database Management Systems</h4>
                        <p>
                            <i class="fa-regular fa-calendar"></i>
                            FRI - 1:00 PM - 3:00 PM
                        </p>
                    </div>
                </div>

                <div class="course-stats">
                    <div class="stat-item">
                        <i class="fas fa-users"></i>
                        <span>28 Students</span>
                    </div>
                    <div class="stat-item">
                        <i class="fas fa-clock"></i>
                        <span>2025 - 2026</span>
                    </div>
                </div>

                <div class="course-footer">
                    <button class="btn-view-course">
                        <i class="fas fa-eye"></i> View
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Custom/teacherCourse.js"></script>
}
