
@{
    ViewBag.Title = "Gradebook";
    int courseId = ViewBag.CourseId ?? Model.Id;
}

<link rel="stylesheet" href="~/Content/Site.css" />
<link rel="stylesheet" href="~/Content/teacherViewCourse.css" />


<div class="admin-container">
    <!-- Course Header -->
    <div class="page-header">
        <div class="course-title-section">
            <h1>@Model.CourseTitle</h1>
            <span class="course-schedule">
                @Model.CourseCode
                @if (ViewBag.SectionName != null)
                {
                    <text> • @ViewBag.SectionName</text>
                }
                @if (ViewBag.Semester != null)
                {
                    int semester = ViewBag.Semester;
                    string semesterName = semester == 1 ? "1st Semester" : semester == 2 ? "2nd Semester" : semester == 3 ? "Summer" : "Semester " + semester;
                    <text> • @semesterName</text>
                }
            </span>
        </div>
    </div>

    <!-- Navigation Tabs -->
    <div class="course-navigation">
        <div class="nav-tabs">
            <button class="nav-tab "
                    onclick="window.location.href='@Url.Action("Material", "Teacher", new { id = courseId })'">
                Learning Materials
            </button>
            <button class="nav-tab active"
                    onclick="window.location.href='@Url.Action("Gradebook", "Teacher", new { id = courseId })'">
                Gradebook
            </button>
            <button class="nav-tab"
                    onclick="window.location.href='@Url.Action("ClassList", "Teacher", new { id = courseId })'">
                Class List
            </button>
            <button class="nav-tab"
                    onclick="window.location.href='@Url.Action("Classwork", "Teacher", new { id = courseId })'">
                Classwork
            </button>
            <button class="nav-tab"
                    onclick="window.location.href='@Url.Action("Announcement", "Teacher", new { id = courseId })'">
                Announcement
            </button>
        </div>
    </div>

    <div class="tab-content">
        <div class="tab-pane active">
            <div class="gradebook-container text-center p-6 border-dashed border-2 border-gray-300 rounded-lg bg-gray-50">
                <i class="fas fa-graduation-cap fa-3x text-gray-400 mb-3"></i>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No Gradebook Data Yet</h3>
                <p class="text-gray-500 mb-4">It looks like there aren't any grade entries for this course yet.</p>
            </div>
        </div>
    </div>

</div>