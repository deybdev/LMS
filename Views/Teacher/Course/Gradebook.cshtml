@model LMS.Models.Course

@{
    ViewBag.Title = "Gradebook";
    int courseId = ViewBag.CourseId ?? Model.Id;
    ViewBag.ActiveTab = "Gradebook";
}

<link rel="stylesheet" href="~/Content/Site.css" />
<link rel="stylesheet" href="~/Content/teacherViewCourse.css" />


<div class="admin-container">
    @Html.Partial("_BackButton")

    @Html.Partial("_CourseHeader", Model)

    @Html.Partial("_CourseNavigation", Model)

    <div class="tab-content">
        <div class="tab-pane active">
            <div class="gradebook-container text-center p-6 border-dashed border-2 border-gray-300 rounded-lg bg-gray-50">
                <i class="fas fa-graduation-cap fa-3x text-gray-400 mb-3"></i>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No Gradebook Data Yet</h3>
                <p class="text-gray-500 mb-4">It looks like there aren't any grade entries for this course yet.</p>
            </div>
        </div>
    </div>

</div>