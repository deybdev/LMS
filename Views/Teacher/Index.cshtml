@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="~/Content/calendar.css" />
<link rel="stylesheet" href="~/Content/Site.css" />


<div class="admin-container">
    <button type="button" class="btn btn-danger px-4 mb-3" data-bs-toggle="modal" data-bs-target="#logoutModal">
        <i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Logout
    </button>


    <div class="dashboard-header d-flex justify-content-between align-items-center">
        <div>
            @if (Session["FirstName"] != null)
            {
                <h1>
                    Welcome back, Professor @Session["LastName"]
                </h1>
            }


            <p>Here what's happening with your classes today</p>
        </div>
        <div class="date-time">
            <div id="currentTime" class="current-time"></div>
            <div id="currentDate" class="current-date"></div>
        </div>
    </div>

    <div class="calendar-container">
        <!-- Calendar Header -->
        <div class="calendar-header">
            <div class="legend-items">
                <div class="legend-item">
                    <span class="legend-color academic"></span>
                    <span>Academic</span>
                </div>
                <div class="legend-item">
                    <span class="legend-color holidays"></span>
                    <span>Holidays</span>
                </div>
                <div class="legend-item">
                    <span class="legend-color examinations"></span>
                    <span>Examinations</span>
                </div>
                <div class="legend-item">
                    <span class="legend-color school-events"></span>
                    <span>School Events</span>
                </div>
            </div>

            <div class="calendar-navigation">
                <button class="nav-btn" id="prevMonth">
                    <i class="fa-solid fa-caret-left"></i>
                </button>
                <span id="currentMonth">October 2025</span>
                <button class="nav-btn" id="nextMonth">
                    <i class="fa-solid fa-caret-right"></i>
                </button>
            </div>
        </div>

        <!-- Calendar Grid -->
        <div class="calendar-content">
            <div class="calendar-grid">
                <!-- Days of Week Header -->
                <div class="days-header">
                    <div class="day-header">SUN</div>
                    <div class="day-header">MON</div>
                    <div class="day-header">TUE</div>
                    <div class="day-header">WED</div>
                    <div class="day-header">THU</div>
                    <div class="day-header">FRI</div>
                    <div class="day-header">SAT</div>
                </div>

                <!-- Calendar Days -->
                <div class="days-grid" id="calendarDays">
                    <!-- Days will be dynamically generated here -->
                </div>
            </div>
            
            <!-- Mobile Horizontal Calendar (will be inserted dynamically) -->
        </div>
    </div>
</div>

<!-- Events Details Modal -->
<div class="modal fade" id="eventDetailsModal" tabindex="-1" aria-labelledby="eventDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eventDetailsModalLabel">
                    <i class="fa-solid fa-calendar-check"></i> Event Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="event-detail-content">
                    <h6 id="detailTitle"></h6>
                    <div class="detail-row">
                        <strong>Type:</strong> <span id="detailType" class="event-badge"></span>
                    </div>
                    <div class="detail-row">
                        <strong>Date:</strong> <span id="detailDate"></span>
                    </div>
                    <div class="detail-row">
                        <strong>Description:</strong> <p id="detailDescription"></p>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn cancel-btn" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .date-time {
        text-align: right;
        font-family: var(--archivo-plain-font);
    }

    .current-date {
        font-size: .9rem;
        color: var(--gray-text);
        margin-bottom: 0.25rem;
    }

    .current-time {
        font-size: 2rem;
        font-weight: 700;
        color: var(--dark-primary-color);
    }

    /* Enhanced Mobile Responsive Styles for Date-Time */
    @@media (max-width: 768px) {
        .dashboard-header .d-flex {
            flex-direction: column;
            align-items: flex-start;
        }

        .date-time {
            text-align: left;
            margin-top: 1rem;
        }

        .current-time {
            font-size: 1.5rem;
        }

        .current-date {
            font-size: 0.8rem;
        }
    }

    @@media (max-width: 576px) {
        .dashboard-header {
            padding: 1.25rem 1.5rem;
        }

        .dashboard-header h1 {
            font-size: 1.5rem;
        }

        .current-time {
            font-size: 1.3rem;
        }

        .current-date {
            font-size: 0.75rem;
        }
    }

    @@media (max-width: 480px) {
        .current-time {
            font-size: 1.2rem;
        }

        .current-date {
            font-size: 0.7rem;
        }
    }
</style>

@section scripts {
    <script src="~/Scripts/Custom/schoolCalendar.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize calendar with teacher role
            calendar = new SchoolCalendar('teacher');
            
            // Initialize date/time updates
            updateDateTime();
            setInterval(updateDateTime, 1000);
        });

        function updateDateTime() {
            const now = new Date();
            const dateOptions = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const timeOptions = { hour: '2-digit', minute: '2-digit', second: '2-digit' };

            $('#currentDate').text(now.toLocaleDateString('en-US', dateOptions));
            $('#currentTime').text(now.toLocaleTimeString('en-US', timeOptions));
        }
    </script>
}


